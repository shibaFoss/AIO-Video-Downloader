<?xml version="1.0" encoding="utf-8"?><!--
    URL Input Dialog Layout:
    - A dialog for pasting video URLs with download functionality
    - Contains a title section, URL input field, and download button
    - Includes status information text at the bottom
    - Uses Material CardView for the container with rounded corners
-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="UseAppTint,UseCompatTextViewDrawableXml">

    <!--
        Main CardView container:
        - Matches parent width with margin
        - Custom background color from resources
        - Rounded corners (10dp radius)
        - Elevation for shadow effect (5dp)
    -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_5"
        android:layout_marginTop="@dimen/_10"
        android:layout_marginEnd="@dimen/_5"
        android:layout_marginBottom="@dimen/_10"
        app:cardBackgroundColor="@color/color_background"
        app:cardCornerRadius="@dimen/_10"
        app:cardElevation="@dimen/_5">

        <!-- Vertical LinearLayout to arrange all child views in a column -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--
                Title container LinearLayout:
                - Surface color background
                - Contains the dialog title text
            -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_surface"
                android:orientation="vertical">

                <!--
                    Dialog title TextView:
                    - Centered text with 10dp margin
                    - Bold style with primary text color
                    - Single line with ellipsis for long text
                    - Custom font family
                -->
                <TextView
                    android:id="@+id/txt_dialog_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10"
                    android:ellipsize="end"
                    android:fontFamily="@font/application_font_family"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/title_paste_video_link"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <!--
                URL input container LinearLayout:
                - Rounded background with surface color
                - 15dp horizontal margin, 10dp top margin
                - Clickable container for the EditText
            -->
            <LinearLayout
                android:id="@+id/edit_url_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15"
                android:layout_marginTop="@dimen/_10"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_5"
                android:background="@drawable/rounded_surface_color"
                android:clickable="true"
                android:orientation="vertical"
                tools:ignore="TouchTargetSizeCheck">

                <!--
                    URL input EditText:
                    - Transparent background to show container's rounded background
                    - URI input type for URL formatting
                    - Single line input
                    - Hint text when empty
                    - Normal text style (non-bold)
                    - 8dp margin all around
                -->
                <EditText
                    android:id="@+id/edit_url"
                    style="@style/style_dialog.message"
                    android:layout_width="wrap_content"
                    android:layout_margin="@dimen/_8"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/text_enter_video_url_hint"
                    android:importantForAutofill="no"
                    android:inputType="textUri"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/color_on_surface"
                    android:textColorHint="@color/color_text_hint"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="normal"
                    tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

            </LinearLayout>

            <!--
                Download button container RelativeLayout:
                - Secondary button selector background
                - 15dp horizontal margin, 5dp vertical margin
                - Elevation for shadow effect (2dp)
                - Clickable container for the button text
            -->
            <RelativeLayout
                android:id="@+id/btn_dialog_positive_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15"
                android:layout_marginTop="@dimen/_5"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_5"
                android:background="@drawable/ic_button_selector_secondary"
                android:clickable="true"
                android:elevation="@dimen/_2"
                tools:ignore="TouchTargetSizeCheck">

                <!--
                    Download button TextView:
                    - Centered in parent with 7dp margin
                    - Download icon at start with 5dp padding
                    - Bold text style
                    - Custom font family
                    - Secondary color for text
                -->
                <TextView
                    android:id="@+id/btn_dialog_positive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_7"
                    android:drawableStart="@drawable/ic_button_download"
                    android:drawablePadding="@dimen/_5"
                    android:drawableTint="@color/color_background"
                    android:fontFamily="@font/application_font_family"
                    android:gravity="center"
                    android:text="@string/title_download_now"
                    android:textColor="@color/color_on_secondary"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!--
                Status information TextView:
                - Centered horizontally
                - Secondary text color
                - Small text size
                - Maximum 2 lines with ellipsis
                - 15dp horizontal margin, 8dp bottom margin
                - Custom font family
            -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_15"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_8"
                android:ellipsize="end"
                android:fontFamily="@font/application_font_family"
                android:maxLines="2"
                android:text="@string/text_go_to_tasks_tab_to_see_progress"
                android:textColor="@color/color_text_secondary"
                android:textSize="@dimen/small_text_size"
                tools:ignore="TextContrastCheck" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>