<?xml version="1.0" encoding="utf-8"?><!--
    Main Download Manager Screen Layout
    Root ScrollView allows vertical scrolling when content exceeds screen height
    Uses surface color background for consistent theming
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_surface"
    android:orientation="vertical"
    tools:ignore="UseCompatTextViewDrawableXml,UseAppTint">

    <!--
        Primary Content Container
        Vertical LinearLayout organizes all cards sequentially
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ======================= -->
        <!-- URL INPUT CARD SECTION -->
        <!-- ======================= -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15"
            android:layout_marginTop="@dimen/_10"
            android:layout_marginEnd="@dimen/_15"
            android:layout_marginBottom="@dimen/_10"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/color_background"
            app:cardCornerRadius="@dimen/_10">

            <!-- URL Input Section Container -->
            <RelativeLayout
                android:id="@+id/edit_url_section"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_8"
                android:layout_marginTop="@dimen/_5"
                android:layout_marginEnd="@dimen/_5"
                android:layout_marginBottom="@dimen/_5"
                android:orientation="vertical">

                <!--
                    URL Input Container
                    Rounded background with clickable surface
                    Positions EditText and positions it before the download button
                -->
                <LinearLayout
                    android:id="@+id/edit_url_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_0"
                    android:layout_marginTop="@dimen/_0"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_marginBottom="@dimen/_5"
                    android:layout_toStartOf="@+id/btn_add_download"
                    android:background="@drawable/rounded_surface_color"
                    android:clickable="true"
                    android:orientation="vertical"
                    tools:ignore="TouchTargetSizeCheck">

                    <!--
                        URL Input Field
                        - Style matches dialog message style
                        - Disabled autofill to prevent unwanted suggestions
                        - Single-line URI input type for URL validation
                        - Custom font and hint styling
                    -->
                    <EditText
                        android:id="@+id/edit_url"
                        style="@style/style_dialog.message"
                        android:layout_margin="@dimen/_8"
                        android:background="@color/transparent"
                        android:ellipsize="end"
                        android:fontFamily="@font/application_font_family"
                        android:gravity="center_vertical"
                        android:hint="@string/text_enter_video_url_hint"
                        android:importantForAutofill="no"
                        android:inputType="textUri"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/color_on_surface"
                        android:textColorHint="@color/color_text_hint"
                        android:textSize="@dimen/normal_text_size"
                        tools:ignore="VisualLintTextFieldSize,TextContrastCheck,TouchTargetSizeCheck" />
                </LinearLayout>

                <!--
                    Download Action Button
                    - Fixed size with selector background for touch feedback
                    - Centered download icon with secondary color tint
                    - Positioned at end of parent container
                -->
                <RelativeLayout
                    android:id="@+id/btn_add_download"
                    android:layout_width="@dimen/_50"
                    android:layout_height="@dimen/_40"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_button_negative_selector"
                    android:clickable="true"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">

                    <ImageView
                        android:layout_width="@dimen/_30"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_button_nav_download"
                        android:tint="@color/color_secondary"
                        tools:ignore="ImageContrastCheck" />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- ========================== -->
        <!-- FAVORITE SITES CARD SECTION -->
        <!-- ========================== -->
        <androidx.cardview.widget.CardView
            android:id="@+id/container_favorite_sites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15"
            android:layout_marginTop="@dimen/_0"
            android:layout_marginEnd="@dimen/_15"
            android:layout_marginBottom="@dimen/_10"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/color_background"
            app:cardCornerRadius="@dimen/_10">

            <!-- Favorite Sites Grid Container -->
            <LinearLayout
                android:id="@+id/favorite_site_bookmark_section"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_8"
                android:layout_marginTop="@dimen/_5"
                android:layout_marginEnd="@dimen/_8"
                android:layout_marginBottom="@dimen/_5"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <!--
                    Favorite Sites RecyclerView
                    - 4-column grid layout
                    - ClipToPadding disabled for edge-to-edge items
                    - Uses custom list item layout for favicons
                -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/favicons_recycler_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="4"
                    tools:listitem="@layout/frag_home_1_main_1_fav_item_1" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ================================ -->
        <!-- HISTORY & BOOKMARKS CARD SECTION -->
        <!-- ================================ -->
        <androidx.cardview.widget.CardView
            android:id="@+id/container_history_bookmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15"
            android:layout_marginTop="@dimen/_0"
            android:layout_marginEnd="@dimen/_15"
            android:layout_marginBottom="@dimen/_10"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/color_background"
            app:cardCornerRadius="@dimen/_10">

            <!-- Dual Button Container -->
            <LinearLayout
                android:id="@+id/history_bookmark_section"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_8"
                android:layout_marginTop="@dimen/_5"
                android:layout_marginEnd="@dimen/_8"
                android:layout_marginBottom="@dimen/_5"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <!--
                    History Button
                    - Equal weight with bookmark button
                    - Web history icon with secondary tint
                    - Selector background for touch feedback
                -->
                <RelativeLayout
                    android:id="@+id/btn_open_history"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/_0"
                    android:layout_weight="1"
                    android:background="@drawable/ic_button_negative_selector"
                    android:clickable="true"
                    tools:ignore="TouchTargetSizeCheck">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/_8"
                        android:drawableStart="@drawable/ic_button_web_history"
                        android:drawablePadding="@dimen/_5"
                        android:drawableTint="@color/color_secondary"
                        android:fontFamily="@font/application_font_family"
                        android:gravity="center_vertical"
                        android:text="@string/title_history"
                        android:textSize="@dimen/normal_text_size" />
                </RelativeLayout>

                <!--
                    Bookmarks Button
                    - Mirror of history button styling
                    - Bookmark icon with consistent tint
                -->
                <RelativeLayout
                    android:id="@+id/btn_open_bookmark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/_0"
                    android:layout_weight="1"
                    android:background="@drawable/ic_button_negative_selector"
                    android:clickable="true"
                    tools:ignore="TouchTargetSizeCheck">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/_8"
                        android:drawableStart="@drawable/ic_button_save_bookmark"
                        android:drawablePadding="@dimen/_5"
                        android:drawableTint="@color/color_secondary"
                        android:fontFamily="@font/application_font_family"
                        android:gravity="center_vertical"
                        android:text="@string/title_bookmarks"
                        android:textSize="@dimen/normal_text_size" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ============================= -->
        <!-- ACTIVE DOWNLOADS CARD SECTION -->
        <!-- ============================= -->
        <androidx.cardview.widget.CardView
            android:id="@+id/container_active_downloads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15"
            android:layout_marginTop="@dimen/_0"
            android:layout_marginEnd="@dimen/_15"
            android:layout_marginBottom="@dimen/_10"
            android:orientation="vertical"
            android:visibility="gone"
            app:cardBackgroundColor="@color/color_background"
            app:cardCornerRadius="@dimen/_10">

            <!-- Active Downloads Info Bar -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_8"
                android:layout_marginTop="@dimen/_5"
                android:layout_marginEnd="@dimen/_8"
                android:layout_marginBottom="@dimen/_5"
                android:baselineAligned="false">

                <!--
                    Active Downloads Info Text
                    - Shows download progress/count
                    - Includes running icon with tint
                    - Ellipsizes long text
                -->
                <TextView
                    android:id="@+id/txt_active_downloads_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_toStartOf="@+id/btn_open_active_downloads"
                    android:drawableStart="@drawable/ic_button_running"
                    android:drawablePadding="@dimen/_5"
                    android:drawableTint="@color/color_secondary"
                    android:ellipsize="end"
                    android:fontFamily="@font/application_font_family"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:text="@string/text__"
                    android:textSize="@dimen/normal_text_size" />

                <!--
                    View Active Downloads Button
                    - Fixed size with selector background
                    - Open icon with secondary tint
                -->
                <RelativeLayout
                    android:id="@+id/btn_open_active_downloads"
                    android:layout_width="@dimen/_50"
                    android:layout_height="@dimen/_40"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_button_negative_selector"
                    android:clickable="true"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">

                    <ImageView
                        android:layout_width="@dimen/_30"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_button_open_v2"
                        android:tint="@color/color_secondary"
                        tools:ignore="ImageContrastCheck" />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- =========================== -->
        <!-- RECENT DOWNLOADS CARD SECTION -->
        <!-- =========================== -->
        <androidx.cardview.widget.CardView
            android:id="@+id/container_recent_downloads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15"
            android:layout_marginTop="@dimen/_0"
            android:layout_marginEnd="@dimen/_15"
            android:layout_marginBottom="@dimen/_10"
            android:orientation="vertical"
            android:visibility="gone"
            app:cardBackgroundColor="@color/color_background"
            app:cardCornerRadius="@dimen/_10">

            <!-- Recent Downloads Content Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Section Header with Secondary Color Background -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_secondary"
                    android:orientation="vertical">

                    <!-- Section Title Text -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_10"
                        android:fontFamily="@font/application_font_family"
                        android:gravity="center"
                        android:text="@string/title_recent_downloads"
                        android:textColor="@color/color_on_secondary"
                        android:textSize="@dimen/normal_text_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <!--
                    Recent Downloads Grid
                    - 3-column layout
                    - Uses custom item layout for thumbnails
                    - Clips to padding for clean edges
                -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recent_downloads_recycle_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_8"
                    android:layout_marginTop="@dimen/_8"
                    android:layout_marginEnd="@dimen/_8"
                    android:layout_marginBottom="@dimen/_0"
                    android:clipToPadding="true"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="3"
                    tools:listitem="@layout/frag_home_1_main_1_recent_item_1" />

                <!-- View All Downloads Button -->
                <TextView
                    android:id="@+id/open_downloads_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_8"
                    android:layout_marginTop="@dimen/_8"
                    android:layout_marginEnd="@dimen/_8"
                    android:layout_marginBottom="@dimen/_5"
                    android:background="@drawable/ic_button_negative_selector"
                    android:clickable="true"
                    android:fontFamily="@font/application_font_family"
                    android:text="@string/text_open_downloads_for_recent_downloads"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/small_text_size" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ======================== -->
        <!-- LOADING STATE CARD SECTION -->
        <!-- ======================== -->
        <androidx.cardview.widget.CardView
            android:id="@+id/container_loading_downloads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15"
            android:layout_marginTop="@dimen/_0"
            android:layout_marginEnd="@dimen/_15"
            android:layout_marginBottom="@dimen/_10"
            android:orientation="vertical"
            android:visibility="gone"
            app:cardBackgroundColor="@color/color_background"
            app:cardCornerRadius="@dimen/_10">

            <!-- Loading Animation Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--
                    Lottie Animation View
                    - Auto-playing loading animation
                    - Hardware accelerated for smooth playback
                    - Negative bottom margin for visual alignment
                -->
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/img_progress_circle"
                    android:layout_width="@dimen/_150"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="@dimen/_0"
                    android:layout_marginBottom="-30dp"
                    android:adjustViewBounds="true"
                    android:hardwareAccelerated="true"
                    android:importantForAccessibility="no"
                    android:layerType="hardware"
                    android:visibility="visible"
                    app:lottie_autoPlay="true"
                    app:lottie_enableMergePathsForKitKatAndAbove="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/animation_circle_loading"
                    tools:ignore="ImageContrastCheck,VisualLintBounds" />

                <!-- Loading Status Text -->
                <TextView
                    android:id="@+id/txt_progress_info"
                    style="@style/style_dialog.message"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_8"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_marginBottom="@dimen/_8"
                    android:autoLink="web"
                    android:fontFamily="@font/application_font_family"
                    android:text="@string/text_loading_downloads_data"
                    android:textSize="@dimen/message_text_size" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ===================== -->
        <!-- EMPTY STATE CARD SECTION -->
        <!-- ===================== -->
        <androidx.cardview.widget.CardView
            android:id="@+id/container_empty_downloads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15"
            android:layout_marginTop="@dimen/_0"
            android:layout_marginEnd="@dimen/_15"
            android:layout_marginBottom="@dimen/_10"
            android:orientation="vertical"
            android:visibility="gone"
            app:cardBackgroundColor="@color/color_background"
            app:cardCornerRadius="@dimen/_10">

            <!-- Empty State Content Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Empty State Illustration -->
                <ImageView
                    android:id="@+id/img_empty_downloads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="@dimen/_10"
                    android:adjustViewBounds="true"
                    android:hardwareAccelerated="true"
                    android:importantForAccessibility="no"
                    android:src="@drawable/image_empty_box" />

                <!-- Empty State Message -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginStart="@dimen/_25"
                    android:layout_marginTop="@dimen/_10"
                    android:layout_marginEnd="@dimen/_25"
                    android:layout_marginBottom="@dimen/_8"
                    android:fontFamily="@font/application_font_family"
                    android:gravity="center"
                    android:text="@string/text_you_dont_have_any_downloads"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/message_text_size" />

                <!-- How To Download Button -->
                <RelativeLayout
                    android:id="@+id/btn_how_to_download"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_0"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_marginBottom="@dimen/_10"
                    android:background="@drawable/ic_button_selector_secondary"
                    android:clickable="true"
                    android:elevation="@dimen/_2"
                    tools:ignore="TouchTargetSizeCheck">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/_7"
                        android:drawableStart="@drawable/ic_button_question"
                        android:drawablePadding="@dimen/_5"
                        android:drawableTint="@color/color_background"
                        android:fontFamily="@font/application_font_family"
                        android:gravity="center"
                        android:text="@string/title_how_to_download"
                        android:textColor="@color/color_on_secondary"
                        android:textSize="@dimen/normal_text_size"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>