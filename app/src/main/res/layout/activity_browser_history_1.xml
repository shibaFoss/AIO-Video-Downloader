<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_surface"
    android:orientation="vertical"
    tools:context="app.ui.main.fragments.browser.activities.BookmarksActivity"
    tools:ignore="UseCompatTextViewDrawableXml,UseAppTint,VisualLintBounds">

    <androidx.cardview.widget.CardView
        android:id="@+id/top_layout_actionbar_section"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_15"
        android:layout_marginTop="@dimen/_10"
        android:layout_marginEnd="@dimen/_15"
        android:layout_marginBottom="@dimen/_0"
        app:cardBackgroundColor="@color/color_background"
        app:cardCornerRadius="@dimen/_10">

        <RelativeLayout
            android:id="@+id/container_actionbar_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/btn_left_actionbar"
                android:layout_width="@dimen/_50"
                android:layout_height="match_parent"
                android:background="@drawable/ic_button_negative_selector"
                android:clickable="true"
                tools:ignore="SpeakableTextPresentCheck">

                <ImageView
                    android:id="@+id/btn_left_actionbar_img"
                    android:layout_width="@dimen/_30"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_button_actionbar_back"
                    android:tint="@color/color_secondary"
                    tools:ignore="ImageContrastCheck" />
            </RelativeLayout>

            <TextView
                android:id="@+id/title_actionbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_10"
                android:layout_marginBottom="@dimen/_0"
                android:layout_toStartOf="@id/btn_right_actionbar"
                android:layout_toEndOf="@id/btn_left_actionbar"
                android:ellipsize="end"
                android:fontFamily="@font/application_font_family"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/title_browser_history"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/btn_right_actionbar"
                android:layout_width="@dimen/_50"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_button_negative_selector"
                android:clickable="true"
                tools:ignore="SpeakableTextPresentCheck">

                <ImageView
                    android:id="@+id/btn_right_actionbar_img"
                    android:layout_width="@dimen/_30"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_button_clear"
                    android:tint="@color/color_secondary"
                    tools:ignore="ImageContrastCheck" />
            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/empty_history_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/_15"
        android:layout_marginTop="@dimen/_0"
        android:layout_marginEnd="@dimen/_15"
        android:layout_marginBottom="@dimen/_0"
        android:orientation="vertical"
        android:visibility="visible"
        app:cardBackgroundColor="@color/color_background"
        app:cardCornerRadius="@dimen/_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/img_empty_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="@dimen/_10"
                android:adjustViewBounds="true"
                android:hardwareAccelerated="true"
                android:importantForAccessibility="no"
                android:src="@drawable/image_empty_box" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginStart="@dimen/_10"
                android:layout_marginTop="@dimen/_10"
                android:layout_marginEnd="@dimen/_10"
                android:layout_marginBottom="@dimen/_10"
                android:fontFamily="@font/application_font_family"
                android:gravity="center"
                android:text="@string/text_your_browsing_history_empty"
                android:textColor="@color/color_text_primary"
                android:textSize="@dimen/message_text_size" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ListView
        android:id="@+id/list_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_section"
        android:layout_below="@+id/top_layout_actionbar_section"
        android:layout_marginStart="@dimen/_0"
        android:layout_marginTop="@dimen/_8"
        android:layout_marginEnd="@dimen/_0"
        android:layout_marginBottom="@dimen/_8"
        android:divider="@color/transparent"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/bottom_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/btn_load_more_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15"
            android:layout_marginTop="@dimen/_0"
            android:layout_marginEnd="@dimen/_15"
            android:layout_marginBottom="@dimen/_10"
            android:background="@drawable/ic_button_selector_secondary"
            android:clickable="true"
            android:elevation="@dimen/_2"
            tools:ignore="UselessParent,TouchTargetSizeCheck">

            <TextView
                android:id="@+id/btn_dialog_positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/_7"
                android:drawableStart="@drawable/ic_button_add_plus"
                android:drawablePadding="@dimen/_5"
                android:drawableTint="@color/color_background"
                android:fontFamily="@font/application_font_family"
                android:gravity="center"
                android:text="@string/text_load_more_bookmarks"
                android:textColor="@color/color_on_secondary"
                android:textSize="@dimen/normal_text_size"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>