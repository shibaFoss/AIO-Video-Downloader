<?xml version="1.0" encoding="utf-8"?>
<!--
    Media Options Dialog Layout
    Displays a card-based menu of actions for media files
    Includes options like delete, convert, open with, etc.
    Uses a dialog style with rounded corners and elevation
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="UseAppTint,UseCompatTextViewDrawableXml">

    <!--
        Main Card Container
        - Elevated card with rounded corners (10dp)
        - Background color matching app theme
        - Small margins on all sides
    -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_5"
        android:layout_marginTop="@dimen/_10"
        android:layout_marginEnd="@dimen/_5"
        android:layout_marginBottom="@dimen/_10"
        app:cardBackgroundColor="@color/color_background"
        app:cardCornerRadius="@dimen/_10"
        app:cardElevation="@dimen/_2">

        <!-- Vertical layout for menu options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--
                Hidden Title Bar (35dp height)
                - Currently hidden (visibility="gone")
                - Would display "Media Options" title if shown
            -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35"
                android:layout_marginStart="@dimen/_0"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_0"
                android:layout_marginBottom="@dimen/_0"
                android:background="@color/color_surface"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/style_dialog.title"
                    android:layout_gravity="center"
                    android:fontFamily="@font/application_font_family"
                    android:text="@string/title_media_options"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--
                Delete File Option
                - First menu item with delete icon
                - Press state selector for visual feedback
                - Icon and text with consistent styling
            -->
            <LinearLayout
                android:id="@+id/btn_delete_file"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10"
                android:layout_marginTop="@dimen/_10"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_0"
                android:background="@drawable/ic_button_negative_selector"
                android:clickable="true"
                android:orientation="vertical"
                tools:ignore="TouchTargetSizeCheck">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_8"
                    android:drawableStart="@drawable/ic_button_delete_v2"
                    android:drawablePadding="@dimen/_5"
                    android:drawableTint="@color/color_secondary"
                    android:fontFamily="@font/application_font_family"
                    android:text="@string/text_delete_from_disk"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!--
                Convert to Audio Option
                - Second menu item with sound icon
                - Same styling as other options
                - 8dp internal margin for touch area
            -->
            <LinearLayout
                android:id="@+id/btn_convert_to_audio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_0"
                android:background="@drawable/ic_button_negative_selector"
                android:clickable="true"
                android:orientation="vertical"
                tools:ignore="TouchTargetSizeCheck">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_8"
                    android:drawableStart="@drawable/ic_button_sound"
                    android:drawablePadding="@dimen/_5"
                    android:drawableTint="@color/color_secondary"
                    android:fontFamily="@font/application_font_family"
                    android:text="@string/text_convert_to_audio"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!--
                Open In Another App Option
                - Third menu item with open icon
                - Secondary color for icon tint
                - Consistent text styling
            -->
            <LinearLayout
                android:id="@+id/btn_open_in_another"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_0"
                android:background="@drawable/ic_button_negative_selector"
                android:clickable="true"
                android:orientation="vertical"
                tools:ignore="TouchTargetSizeCheck">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_8"
                    android:drawableStart="@drawable/ic_button_open_v2"
                    android:drawablePadding="@dimen/_5"
                    android:drawableTint="@color/color_secondary"
                    android:fontFamily="@font/application_font_family"
                    android:text="@string/text_open_in_another"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!--
                Media Information Option
                - Fourth menu item with info icon
                - Bottom margin of 8dp
                - Standard option styling
            -->
            <LinearLayout
                android:id="@+id/btn_media_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_8"
                android:background="@drawable/ic_button_negative_selector"
                android:clickable="true"
                android:orientation="vertical"
                tools:ignore="TouchTargetSizeCheck">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_8"
                    android:drawableStart="@drawable/ic_button_information"
                    android:drawablePadding="@dimen/_5"
                    android:drawableTint="@color/color_secondary"
                    android:fontFamily="@font/application_font_family"
                    android:text="@string/text_file_information"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!--
                Discover More Videos Option (Hidden)
                - Currently not visible (visibility="gone")
                - Would show discovery-related content if enabled
            -->
            <LinearLayout
                android:id="@+id/btn_discover_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_10"
                android:background="@drawable/ic_button_negative_selector"
                android:clickable="true"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_8"
                    android:drawableStart="@drawable/ic_button_discovery_v2"
                    android:drawablePadding="@dimen/_5"
                    android:drawableTint="@color/color_secondary"
                    android:fontFamily="@font/application_font_family"
                    android:text="@string/text_discover_more"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>