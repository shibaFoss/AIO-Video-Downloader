<?xml version="1.0" encoding="utf-8"?>
<!--
CONTENT POLICY ACTIVITY LAYOUT
Displays the app's content policy information with:
1. Action bar with back button and title
2. Scrollable content area for policy text
-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_surface"
    android:orientation="vertical"
    tools:context="app.ui.others.information.ContentPolicyActivity"
    tools:ignore="UseCompatTextViewDrawableXml,UseAppTint">

    <!--
    TOP ACTION BAR SECTION
    Contains back button and title
    Features:
    - Fixed height of 50dp
    - Rounded corners (10dp radius)
    - Standard margins (15dp sides, 10dp top)
    - Background color matching app theme
    -->
    <androidx.cardview.widget.CardView
        android:id="@+id/top_layout_actionbar_section"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50"
        android:layout_marginStart="@dimen/_15"
        android:layout_marginTop="@dimen/_10"
        android:layout_marginEnd="@dimen/_15"
        android:layout_marginBottom="@dimen/_0"
        app:cardBackgroundColor="@color/color_background"
        app:cardCornerRadius="@dimen/_10">

        <RelativeLayout
            android:id="@+id/container_actionbar_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Back button (left side) -->
            <RelativeLayout
                android:id="@+id/btn_left_actionbar"
                android:layout_width="@dimen/_50"
                android:layout_height="match_parent"
                android:background="@drawable/ic_button_negative_selector"
                android:clickable="true"
                tools:ignore="SpeakableTextPresentCheck">

                <!-- Back arrow icon -->
                <ImageView
                    android:id="@+id/btn_left_actionbar_img"
                    android:layout_width="@dimen/_30"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_button_actionbar_back"
                    android:tint="@color/color_secondary"
                    tools:ignore="ImageContrastCheck" />
            </RelativeLayout>

            <!-- Activity title -->
            <TextView
                android:id="@+id/title_actionbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_10"
                android:layout_marginBottom="@dimen/_0"
                android:layout_toEndOf="@id/btn_left_actionbar"
                android:ellipsize="end"
                android:fontFamily="@font/application_font_family"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/title_content_policy"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!--
    POLICY CONTENT SECTION
    CardView container for scrollable policy text
    Features:
    - Takes remaining vertical space (layout_weight="1")
    - Standard margins (15dp sides, 8dp top/bottom)
    - Rounded corners (10dp radius)
    - Background color matching app theme
    -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_15"
        android:layout_marginTop="@dimen/_8"
        android:layout_marginEnd="@dimen/_15"
        android:layout_marginBottom="@dimen/_8"
        android:layout_weight="1"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/color_background"
        app:cardCornerRadius="@dimen/_10">

        <!-- Scrollable container for policy text -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--
            POLICY TEXT CONTENT
            Displays the actual policy text with:
            - Small text size (14sp)
            - Primary text color
            - Secondary color for links
            - Automatic web link detection
            - Standard margins (10dp sides, 8dp top/bottom)
            - Application font family
            -->
            <TextView
                android:id="@+id/txt_content_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10"
                android:layout_marginTop="@dimen/_8"
                android:layout_marginEnd="@dimen/_10"
                android:layout_marginBottom="@dimen/_8"
                android:autoLink="web"
                android:fontFamily="@font/application_font_family"
                android:text="@string/text__"
                android:textColor="@color/color_text_primary"
                android:textColorLink="@color/color_secondary"
                android:textSize="@dimen/small_text_size" />

        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>