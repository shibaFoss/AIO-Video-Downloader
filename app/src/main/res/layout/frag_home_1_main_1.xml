<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_surface"
    android:orientation="vertical"
    tools:ignore="UseCompatTextViewDrawableXml,UseAppTint">

    <androidx.cardview.widget.CardView
        android:id="@+id/button_upgrade_to_premium"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_15"
        android:layout_marginTop="@dimen/_10"
        android:layout_marginEnd="@dimen/_15"
        android:layout_marginBottom="@dimen/_5"
        android:background="@drawable/ic_button_negative_selector"
        android:clickable="true"
        android:elevation="@dimen/_2"
        app:cardCornerRadius="@dimen/_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_background">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/image_loading_circle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical|center_horizontal"
                android:adjustViewBounds="true"
                android:hardwareAccelerated="true"
                android:importantForAccessibility="no"
                android:layerType="hardware"
                android:scaleType="centerCrop"
                android:visibility="visible"
                app:lottie_autoPlay="true"
                app:lottie_enableMergePathsForKitKatAndAbove="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/home_title_bg_animation"
                tools:ignore="ImageContrastCheck,VisualLintBounds" />

            <ImageView
                android:id="@+id/img_premium_badge"
                android:layout_width="@dimen/_70"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10"
                android:adjustViewBounds="true"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_premium_badge_big" />

            <LinearLayout
                android:id="@+id/left_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/img_end_arrow"
                android:layout_toRightOf="@id/img_premium_badge"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/font_family_bold"
                    android:maxLines="1"
                    android:text="@string/title_video_downloader"
                    android:textColor="@color/color_on_primary"
                    android:textSize="@dimen/sub_heading_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_premium_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/font_family_regular"
                    android:maxLines="1"
                    android:text="@string/title_upgrade_to_aio_premium"
                    android:textColor="@color/color_on_primary"
                    android:textSize="@dimen/small_text_size" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_end_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/_10"
                android:adjustViewBounds="true"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_button_left_nav_arrow"
                android:tint="@color/color_on_primary" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_upgrade_to_premium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15"
                android:layout_marginTop="@dimen/_5"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_10"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/color_background"
                app:cardCornerRadius="@dimen/_10">

                <RelativeLayout
                    android:id="@+id/edit_url_section"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_8"
                    android:layout_marginTop="@dimen/_5"
                    android:layout_marginEnd="@dimen/_5"
                    android:layout_marginBottom="@dimen/_5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/edit_field_file_url_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_0"
                        android:layout_marginTop="@dimen/_0"
                        android:layout_marginEnd="@dimen/_10"
                        android:layout_marginBottom="@dimen/_5"
                        android:layout_toStartOf="@+id/button_add_download"
                        android:background="@drawable/rounded_surface_color"
                        android:clickable="true"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edit_field_file_url"
                            style="@style/style_dialog.message"
                            android:layout_margin="@dimen/_8"
                            android:background="@color/transparent"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:hint="@string/text_enter_video_url_hint"
                            android:importantForAutofill="no"
                            android:inputType="textUri"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/color_on_surface"
                            android:textColorHint="@color/color_text_hint"
                            android:textSize="@dimen/normal_text_size" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/button_add_download"
                        android:layout_width="@dimen/_50"
                        android:layout_height="@dimen/_40"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_button_negative_selector"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="@dimen/_30"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:adjustViewBounds="true"
                            android:importantForAccessibility="no"
                            android:src="@drawable/ic_button_nav_download"
                            android:tint="@color/color_secondary" />
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_10"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/color_background"
                app:cardCornerRadius="@dimen/_10">

                <LinearLayout
                    android:id="@+id/favorite_site_bookmark_section"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_8"
                    android:layout_marginTop="@dimen/_5"
                    android:layout_marginEnd="@dimen/_8"
                    android:layout_marginBottom="@dimen/_5"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/favicons_recycler_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="4"
                        tools:listitem="@layout/frag_home_1_main_1_fav_item_1" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_10"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/color_background"
                app:cardCornerRadius="@dimen/_10">

                <LinearLayout
                    android:id="@+id/history_bookmark_section"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_8"
                    android:layout_marginTop="@dimen/_5"
                    android:layout_marginEnd="@dimen/_8"
                    android:layout_marginBottom="@dimen/_5"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/button_open_history"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_0"
                        android:layout_weight="1"
                        android:background="@drawable/ic_button_negative_selector"
                        android:clickable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_margin="@dimen/_8"
                            android:drawableStart="@drawable/ic_button_web_history"
                            android:drawablePadding="@dimen/_5"
                            android:drawableTint="@color/color_secondary"
                            android:fontFamily="@font/font_family_regular"
                            android:gravity="center_vertical"
                            android:text="@string/title_history"
                            android:textSize="@dimen/normal_text_size" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/button_open_bookmark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_0"
                        android:layout_weight="1"
                        android:background="@drawable/ic_button_negative_selector"
                        android:clickable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_margin="@dimen/_8"
                            android:drawableStart="@drawable/ic_button_save_bookmark"
                            android:drawablePadding="@dimen/_5"
                            android:drawableTint="@color/color_secondary"
                            android:fontFamily="@font/font_family_regular"
                            android:gravity="center_vertical"
                            android:text="@string/title_bookmarks"
                            android:textSize="@dimen/normal_text_size" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/active_downloads_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_10"
                android:orientation="vertical"
                android:visibility="gone"
                app:cardBackgroundColor="@color/color_background"
                app:cardCornerRadius="@dimen/_10">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_8"
                    android:layout_marginTop="@dimen/_5"
                    android:layout_marginEnd="@dimen/_8"
                    android:layout_marginBottom="@dimen/_5"
                    android:baselineAligned="false">

                    <TextView
                        android:id="@+id/text_active_downloads_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10"
                        android:layout_toStartOf="@+id/button_open_active_downloads"
                        android:drawableStart="@drawable/ic_button_running"
                        android:drawablePadding="@dimen/_5"
                        android:drawableTint="@color/color_secondary"
                        android:ellipsize="end"
                        android:fontFamily="@font/font_family_regular"
                        android:gravity="left|center_vertical"
                        android:maxLines="1"
                        android:text="@string/text__"
                        android:textSize="@dimen/normal_text_size" />

                    <RelativeLayout
                        android:id="@+id/button_open_active_downloads"
                        android:layout_width="@dimen/_50"
                        android:layout_height="@dimen/_40"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_button_negative_selector"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="@dimen/_30"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:adjustViewBounds="true"
                            android:importantForAccessibility="no"
                            android:src="@drawable/ic_button_open_v2"
                            android:tint="@color/color_secondary" />
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/recent_downloads_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_10"
                android:orientation="vertical"
                android:visibility="gone"
                app:cardBackgroundColor="@color/color_background"
                app:cardCornerRadius="@dimen/_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_secondary"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_10"
                            android:fontFamily="@font/font_family_bold"
                            android:gravity="center"
                            android:text="@string/title_recent_downloads"
                            android:textColor="@color/color_on_secondary"
                            android:textSize="@dimen/normal_text_size" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recent_downloads_recycle_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_8"
                        android:layout_marginTop="@dimen/_8"
                        android:layout_marginEnd="@dimen/_8"
                        android:layout_marginBottom="@dimen/_0"
                        android:clipToPadding="true"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="3"
                        tools:listitem="@layout/frag_home_1_main_1_recent_item_1" />

                    <TextView
                        android:id="@+id/open_downloads_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_8"
                        android:layout_marginTop="@dimen/_8"
                        android:layout_marginEnd="@dimen/_8"
                        android:layout_marginBottom="@dimen/_5"
                        android:background="@drawable/ic_button_negative_selector"
                        android:clickable="true"
                        android:fontFamily="@font/font_family_regular"
                        android:text="@string/text_open_downloads_for_recent_downloads"
                        android:textColor="@color/color_text_hint"
                        android:textSize="@dimen/small_text_size" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/empty_downloads_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_10"
                android:orientation="vertical"
                android:visibility="gone"
                app:cardBackgroundColor="@color/color_background"
                app:cardCornerRadius="@dimen/_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/image_empty_downloads"
                        android:layout_width="@dimen/_200"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginTop="-30dp"
                        android:layout_marginBottom="-30dp"
                        android:adjustViewBounds="true"
                        android:hardwareAccelerated="true"
                        android:importantForAccessibility="no"
                        android:layerType="hardware"
                        app:lottie_autoPlay="true"
                        app:lottie_enableMergePathsForKitKatAndAbove="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/empty_downloads_animation" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginStart="@dimen/_25"
                        android:layout_marginTop="@dimen/_0"
                        android:layout_marginEnd="@dimen/_25"
                        android:layout_marginBottom="@dimen/_8"
                        android:gravity="center"
                        android:text="@string/text_you_dont_have_any_downloads"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/message_text_size" />

                    <RelativeLayout
                        android:id="@+id/button_how_to_download"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10"
                        android:layout_marginTop="@dimen/_0"
                        android:layout_marginEnd="@dimen/_10"
                        android:layout_marginBottom="@dimen/_10"
                        android:background="@drawable/ic_button_selector_secondary"
                        android:clickable="true"
                        android:elevation="@dimen/_2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_margin="@dimen/_7"
                            android:drawableStart="@drawable/ic_button_question"
                            android:drawablePadding="@dimen/_5"
                            android:drawableTint="@color/color_background"
                            android:fontFamily="@font/font_family_bold"
                            android:gravity="center"
                            android:text="@string/title_how_to_download"
                            android:textColor="@color/color_on_secondary"
                            android:textSize="@dimen/normal_text_size" />
                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
