<?xml version="1.0" encoding="utf-8"?>
<!--
    Root layout for a custom dialog with tab management functionality
    Applies a dialog style (@style/style_dialog) for consistent appearance
    Uses LinearLayout as container with match_parent width and wrap_content height
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="UseAppTint,UseCompatTextViewDrawableXml,VisualLintBounds">

    <!--
        CardView container that gives the dialog its elevated card appearance
        - Custom background color and corner radius
        - Margins provide spacing from screen edges
        - Elevation creates shadow effect
    -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_10"
        android:layout_marginTop="@dimen/_67"
        android:layout_marginEnd="@dimen/_10"
        android:layout_marginBottom="@dimen/_125"
        app:cardBackgroundColor="@color/color_background"
        app:cardCornerRadius="@dimen/_10"
        app:cardElevation="@dimen/_5">

        <!--
            Vertical LinearLayout organizes dialog content:
            1. "New Tab" button at top
            2. ListView showing existing tabs below
        -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--
                "Create New Tab" button container
                - Uses RelativeLayout for centered positioning
                - Has pressed state selector (@drawable/ic_button_selector_secondary)
                - Includes elevation for depth
            -->
            <RelativeLayout
                android:id="@+id/btn_create_new_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15"
                android:layout_marginTop="@dimen/_10"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_5"
                android:background="@drawable/ic_button_selector_secondary"
                android:clickable="true"
                android:elevation="@dimen/_2"
                tools:ignore="TouchTargetSizeCheck">

                <!--
                    "New Tab" button text with plus icon
                    - Icon is drawn to the start of text
                    - Custom font and styling applied
                    - Centered within RelativeLayout
                -->
                <TextView
                    android:id="@+id/btn_dialog_positive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_7"
                    android:drawableStart="@drawable/ic_button_add_plus"
                    android:drawablePadding="@dimen/_5"
                    android:drawableTint="@color/color_background"
                    android:fontFamily="@font/application_font_family"
                    android:gravity="center"
                    android:text="@string/title_open_new_tab"
                    android:textColor="@color/color_on_secondary"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!--
                ListView displaying existing browser tabs
                - Takes remaining space below the button
                - Transparent divider between items
                - Margins provide spacing from edges
            -->
            <ListView
                android:id="@+id/list_browser_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_0"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_0"
                android:layout_marginBottom="@dimen/_8"
                android:divider="@color/transparent" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>