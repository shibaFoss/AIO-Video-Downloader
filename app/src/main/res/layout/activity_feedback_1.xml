<?xml version="1.0" encoding="utf-8"?><!--
USER FEEDBACK ACTIVITY LAYOUT
Allows users to submit feedback about the app with:
1. Action bar with back and send buttons
2. Informational message about feedback
3. Common issue checkboxes
4. Email input field
5. Detailed message input
-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_surface"
    android:orientation="vertical"
    tools:context="app.ui.others.information.UserFeedbackActivity"
    tools:ignore="UseCompatTextViewDrawableXml,UseAppTint">

    <!--
    ACTION BAR SECTION
    Contains back button, title, and send button
    Features:
    - Fixed height of 50dp
    - Rounded corners (10dp radius)
    - Standard margins (15dp sides, 10dp top, 5dp bottom)
    - Background color matching app theme
    -->
    <androidx.cardview.widget.CardView
        android:id="@+id/top_layout_actionbar_section"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50"
        android:layout_marginStart="@dimen/_15"
        android:layout_marginTop="@dimen/_10"
        android:layout_marginEnd="@dimen/_15"
        android:layout_marginBottom="@dimen/_5"
        app:cardBackgroundColor="@color/color_background"
        app:cardCornerRadius="@dimen/_10">

        <RelativeLayout
            android:id="@+id/container_actionbar_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Back button (left side) -->
            <RelativeLayout
                android:id="@+id/btn_left_actionbar"
                android:layout_width="@dimen/_50"
                android:layout_height="match_parent"
                android:background="@drawable/ic_button_negative_selector"
                android:clickable="true"
                tools:ignore="SpeakableTextPresentCheck">

                <ImageView
                    android:id="@+id/btn_left_actionbar_img"
                    android:layout_width="@dimen/_30"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_button_actionbar_back"
                    android:tint="@color/color_secondary"
                    tools:ignore="ImageContrastCheck" />
            </RelativeLayout>

            <!-- Activity title -->
            <TextView
                android:id="@+id/title_actionbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_10"
                android:layout_marginBottom="@dimen/_0"
                android:layout_toStartOf="@id/btn_right_actionbar"
                android:layout_toEndOf="@id/btn_left_actionbar"
                android:ellipsize="end"
                android:fontFamily="@font/application_font_family"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/title_share_feedback"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold" />

            <!-- Send feedback button (right side) -->
            <RelativeLayout
                android:id="@+id/btn_right_actionbar"
                android:layout_width="@dimen/_50"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_button_negative_selector"
                android:clickable="true"
                tools:ignore="SpeakableTextPresentCheck">

                <ImageView
                    android:id="@+id/btn_right_actionbar_img"
                    android:layout_width="@dimen/_30"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_button_actionbar_send"
                    android:tint="@color/color_secondary"
                    tools:ignore="ImageContrastCheck" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!--
    SCROLLABLE CONTENT AREA
    Takes remaining vertical space (layout_weight="1")
    Contains all feedback input components
    -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--
            FEEDBACK MESSAGE CARD
            Displays informational text about feedback process
            Features:
            - Standard margins (15dp sides, 5dp top, 10dp bottom)
            - Rounded corners (10dp radius)
            - 10dp inner padding
            - Centered text with web links
            -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15"
                android:layout_marginTop="@dimen/_5"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_10"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/color_background"
                app:cardCornerRadius="@dimen/_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_10"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_marginBottom="@dimen/_10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autoLink="web"
                        android:fontFamily="@font/application_font_family"
                        android:gravity="center"
                        android:text="@string/text_feedback_message"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/message_text_size" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--
            COMMON ISSUES CARD
            Radio-style checkboxes for common problems
            Features:
            - Standard margins (15dp sides, 10dp bottom)
            - Rounded corners (10dp radius)
            - 10dp inner padding
            - Custom-styled checkboxes with radio button appearance
            - Fixed height (36dp) for each option
            -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_10"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/color_background"
                app:cardCornerRadius="@dimen/_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_10"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_marginBottom="@dimen/_10"
                    android:orientation="vertical">

                    <!-- Custom-styled checkboxes for common issues -->
                    <CheckBox
                        android:id="@+id/checkbox_no_sound"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36"
                        android:background="@drawable/ic_button_negative_selector"
                        android:button="@null"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_button_radio_selector"
                        android:drawablePadding="@dimen/_10"
                        android:drawableTint="@color/color_secondary"
                        android:fontFamily="@font/application_font_family"
                        android:gravity="center_vertical"
                        android:text="@string/text_no_sound"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/normal_text_size"
                        tools:ignore="TouchTargetSizeCheck,VisualLintButtonSize" />

                    <!-- Additional checkboxes follow same pattern -->
                    <CheckBox
                        android:id="@+id/checkbox_incomplete_video"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36"
                        android:background="@drawable/ic_button_negative_selector"
                        android:button="@null"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_button_radio_selector"
                        android:drawablePadding="@dimen/_10"
                        android:drawableTint="@color/color_secondary"
                        android:fontFamily="@font/application_font_family"
                        android:gravity="center_vertical"
                        android:text="@string/text_incomplete_video"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/normal_text_size"
                        tools:ignore="TouchTargetSizeCheck,VisualLintButtonSize" />

                    <CheckBox
                        android:id="@+id/checkbox_app_crashed"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36"
                        android:background="@drawable/ic_button_negative_selector"
                        android:button="@null"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_button_radio_selector"
                        android:drawablePadding="@dimen/_10"
                        android:drawableTint="@color/color_secondary"
                        android:fontFamily="@font/application_font_family"
                        android:gravity="center_vertical"
                        android:text="@string/text_app_crashed"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/normal_text_size"
                        tools:ignore="TouchTargetSizeCheck,VisualLintButtonSize" />

                    <CheckBox
                        android:id="@+id/checkbox_glitch_in_video"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36"
                        android:background="@drawable/ic_button_negative_selector"
                        android:button="@null"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_button_radio_selector"
                        android:drawablePadding="@dimen/_10"
                        android:drawableTint="@color/color_secondary"
                        android:fontFamily="@font/application_font_family"
                        android:gravity="center_vertical"
                        android:text="@string/text_glitch_in_video"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/normal_text_size"
                        tools:ignore="TouchTargetSizeCheck,VisualLintButtonSize" />

                    <CheckBox
                        android:id="@+id/checkbox_showing_too_many_ads"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36"
                        android:background="@drawable/ic_button_negative_selector"
                        android:button="@null"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_button_radio_selector"
                        android:drawablePadding="@dimen/_10"
                        android:drawableTint="@color/color_secondary"
                        android:fontFamily="@font/application_font_family"
                        android:gravity="center_vertical"
                        android:text="@string/text_showing_many_ads"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/normal_text_size"
                        tools:ignore="TouchTargetSizeCheck,VisualLintButtonSize" />

                    <CheckBox
                        android:id="@+id/checkbox_other_problem"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36"
                        android:background="@drawable/ic_button_negative_selector"
                        android:button="@null"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_button_radio_selector"
                        android:drawablePadding="@dimen/_10"
                        android:drawableTint="@color/color_secondary"
                        android:fontFamily="@font/application_font_family"
                        android:gravity="center_vertical"
                        android:text="@string/text_other_problems"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/normal_text_size"
                        tools:ignore="TouchTargetSizeCheck,VisualLintButtonSize" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--
            USER INPUT CARD
            Contains email and detailed message fields
            Features:
            - Standard margins (15dp sides, 10dp bottom)
            - Rounded corners (10dp radius)
            - 5dp inner padding
            - Styled input fields with rounded backgrounds
            -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_10"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/color_background"
                app:cardCornerRadius="@dimen/_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_5"
                    android:layout_marginTop="@dimen/_5"
                    android:layout_marginEnd="@dimen/_5"
                    android:layout_marginBottom="@dimen/_5"
                    android:orientation="vertical">

                    <!-- Email input field -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5"
                        android:layout_marginTop="@dimen/_3"
                        android:layout_marginEnd="@dimen/_5"
                        android:layout_marginBottom="@dimen/_8"
                        android:background="@drawable/rounded_surface_color"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edit_email_field"
                            style="@style/style_dialog.message"
                            android:layout_margin="@dimen/_8"
                            android:background="@color/transparent"
                            android:gravity="center_vertical"
                            android:hint="@string/text_enter_your_email_address_here"
                            android:importantForAutofill="no"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/color_on_surface"
                            android:textColorHint="@color/color_text_hint"
                            android:textSize="@dimen/normal_text_size"
                            android:textStyle="normal"
                            tools:ignore="TextContrastCheck,TouchTargetSizeCheck,VisualLintTextFieldSize" />
                    </LinearLayout>

                    <!-- Detailed message input -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5"
                        android:layout_marginTop="@dimen/_0"
                        android:layout_marginEnd="@dimen/_5"
                        android:layout_marginBottom="@dimen/_3"
                        android:background="@drawable/rounded_surface_color"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edit_message_field"
                            style="@style/style_dialog.message"
                            android:layout_margin="@dimen/_8"
                            android:background="@color/transparent"
                            android:gravity="start"
                            android:hint="@string/text_describe_your_experience"
                            android:importantForAutofill="no"
                            android:inputType="text"
                            android:maxLines="5"
                            android:minHeight="@dimen/_120"
                            android:singleLine="true"
                            android:textColor="@color/color_on_surface"
                            android:textColorHint="@color/color_text_hint"
                            android:textSize="@dimen/normal_text_size"
                            android:textStyle="normal"
                            tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>