<?xml version="1.0" encoding="utf-8"?><!--
    Custom Toast Notification Layout
    A styled CardView container for displaying application toast messages
    Features rounded corners, elevation for depth, and consistent theming
-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_toast_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10"
    android:layout_marginTop="@dimen/_10"
    android:layout_marginEnd="@dimen/_10"
    android:layout_marginBottom="@dimen/_10"
    android:orientation="horizontal"
    app:cardBackgroundColor="@color/color_background"
    app:cardCornerRadius="@dimen/_10"
    app:cardElevation="@dimen/_5">

    <!--
        Toast Content Container
        Horizontal LinearLayout that holds the app icon and message
        Matches CardView dimensions and uses background color for consistency
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background"
        android:orientation="horizontal">

        <!--
            Application Icon
            - Circular ImageView for brand recognition
            - Fixed size (30x30dp) with vertical centering
            - Left margin for spacing from edge
            - Small elevation for subtle depth
            - Defaults to launcher icon
            - Marked as unimportant for accessibility (decorative)
        -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_toast_app_icon"
            android:layout_width="@dimen/_30"
            android:layout_height="@dimen/_30"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10"
            android:layout_marginTop="@dimen/_5"
            android:layout_marginEnd="@dimen/_0"
            android:layout_marginBottom="@dimen/_5"
            android:elevation="@dimen/_1"
            android:importantForAccessibility="no"
            android:src="@mipmap/ic_launcher" />

        <!--
            Toast Message Text
            - Vertically centered with the icon
            - Uses application font family for consistency
            - Left and right margins for balanced spacing
            - Primary text color for readability
            - Message text size from dimensions
            - Default text shows percentage as example
        -->
        <TextView
            android:id="@+id/txt_toast_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10"
            android:layout_marginTop="@dimen/_5"
            android:layout_marginEnd="@dimen/_10"
            android:layout_marginBottom="@dimen/_5"
            android:fontFamily="@font/application_font_family"
            android:gravity="center_vertical"
            android:text="@string/text_100_percentage"
            android:textColor="@color/color_text_primary"
            android:textSize="@dimen/message_text_size" />
    </LinearLayout>

</androidx.cardview.widget.CardView>