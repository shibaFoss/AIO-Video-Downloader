<?xml version="1.0" encoding="utf-8"?><!--
    Media Thumbnail Item Layout
    Displays a media item (video/audio) with thumbnail, play button, and duration
    Used in grids/lists of media content with interactive elements
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_button_negative_selector"
    android:clickable="true"
    android:orientation="vertical"
    tools:ignore="UseAppTint,SpeakableTextPresentCheck">

    <!--
        Thumbnail Card Container
        - Fixed dimensions (95x75dp) with small margin
        - Rounded corners (5dp radius)
        - Background color and subtle shadow
        - Contains three layered elements:
          1. Main thumbnail image
          2. Play button overlay
          3. Duration indicator
    -->
    <androidx.cardview.widget.CardView
        android:id="@+id/container_img_thumbnail"
        android:layout_width="@dimen/_95"
        android:layout_height="@dimen/_75"
        android:layout_margin="@dimen/_3"
        android:outlineAmbientShadowColor="@color/color_secondary"
        app:cardBackgroundColor="@color/color_background"
        app:cardCornerRadius="@dimen/_5">

        <!--
            Primary Thumbnail Image
            - Fills the CardView (match_parent)
            - CenterCrop scaling maintains aspect ratio while filling space
            - Default placeholder when no thumbnail available
            - Accessibility optimized (decorative image)
        -->
        <ImageView
            android:id="@+id/img_file_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            android:src="@drawable/image_no_thumb_available"
            tools:ignore="ImageContrastCheck" />

        <!--
            Play Button Overlay
            - Centered on top of thumbnail
            - Semi-transparent (alpha 0.7)
            - Elevation for visual separation
            - Tinted with onPrimary color
            - Fixed width with proportional height
        -->
        <ImageView
            android:layout_width="@dimen/_20"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:alpha="0.7"
            android:elevation="@dimen/_5"
            android:importantForAccessibility="no"
            android:src="@drawable/image_media_play"
            android:tint="@color/color_on_primary"
            tools:ignore="ImageContrastCheck" />

        <!--
            Duration Indicator Container
            - Positioned at bottom-end corner
            - Semi-transparent black rounded background
            - Small padding around text
        -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/_5"
            android:layout_marginTop="@dimen/_5"
            android:layout_marginEnd="@dimen/_5"
            android:layout_marginBottom="@dimen/_5"
            android:background="@drawable/rounded_transparent_black"
            android:orientation="vertical">

            <!--
                Duration Text
                - Small text size for compact display
                - Semi-transparent white color
                - Uses application font family
                - Minimal margins for tight layout
            -->
            <TextView
                android:id="@+id/txt_media_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_1"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_1"
                android:layout_marginBottom="@dimen/_0"
                android:fontFamily="@font/application_font_family"
                android:text="@string/text_time_representation"
                android:textColor="@color/transparent_white"
                android:textSize="@dimen/small_text_size"
                android:textStyle="normal"
                tools:ignore="TextContrastCheck" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>