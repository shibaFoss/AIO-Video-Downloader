<?xml version="1.0" encoding="utf-8"?><!--
    Custom Action Bar Layout
    Reusable card-based action bar with back button, title, and options menu
    Uses RelativeLayout as root for flexible positioning
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:ignore="UseCompatTextViewDrawableXml,UseAppTint">

    <!--
        Action Bar Card Container
        - Elevated card with rounded corners
        - Fixed height (50dp) with horizontal margins
        - Background color matches app theme
    -->
    <androidx.cardview.widget.CardView
        android:id="@+id/top_layout_actionbar_section"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50"
        android:layout_marginStart="@dimen/_15"
        android:layout_marginTop="@dimen/_10"
        android:layout_marginEnd="@dimen/_15"
        android:layout_marginBottom="@dimen/_0"
        app:cardBackgroundColor="@color/color_background"
        app:cardCornerRadius="@dimen/_10">

        <!-- Main container for action bar elements -->
        <RelativeLayout
            android:id="@+id/container_actionbar_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--
                Back Button Container
                - Fixed width (50dp) matching card height
                - Pressed state selector for visual feedback
                - Contains back arrow icon
            -->
            <RelativeLayout
                android:id="@+id/btn_actionbar_back"
                android:layout_width="@dimen/_50"
                android:layout_height="match_parent"
                android:background="@drawable/ic_button_negative_selector"
                android:clickable="true"
                tools:ignore="SpeakableTextPresentCheck">

                <!--
                    Back Button Icon
                    - Centered arrow icon (30dp width)
                    - Secondary color tint
                    - Accessibility ignored (handled by parent)
                -->
                <ImageView
                    android:id="@+id/btn_actionbar_back_img"
                    android:layout_width="@dimen/_30"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_button_actionbar_back"
                    android:tint="@color/color_secondary"
                    tools:ignore="ImageContrastCheck" />
            </RelativeLayout>

            <!--
                Title Text
                - Marquee-scrolling text for long titles
                - Centered vertically between buttons
                - Bold text with application font
                - Takes remaining space between buttons
            -->
            <TextView
                android:id="@+id/txt_video_file_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_5"
                android:layout_marginBottom="@dimen/_0"
                android:layout_toStartOf="@id/btn_actionbar_option"
                android:layout_toEndOf="@+id/btn_actionbar_back"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/application_font_family"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/text__"
                android:textSize="@dimen/normal_text_size"
                android:textStyle="bold" />

            <!--
                Options Menu Button
                - Fixed width (50dp) matching card height
                - Pressed state selector for visual feedback
                - Contains menu/dots icon
                - Right-aligned in action bar
            -->
            <RelativeLayout
                android:id="@+id/btn_actionbar_option"
                android:layout_width="@dimen/_50"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_button_negative_selector"
                android:clickable="true"
                tools:ignore="SpeakableTextPresentCheck">

                <!--
                    Menu Button Icon
                    - Centered menu icon (30dp width)
                    - Secondary color tint
                    - Accessibility ignored (handled by parent)
                -->
                <ImageView
                    android:id="@+id/btn_actionbar_option_img"
                    android:layout_width="@dimen/_30"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_button_actionbar_menu"
                    android:tint="@color/color_secondary"
                    tools:ignore="ImageContrastCheck" />
            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>