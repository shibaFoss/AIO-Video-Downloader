<?xml version="1.0" encoding="utf-8"?><!--
    Application Settings Screen Layout
    Scrollable container with categorized settings cards
    Organized in four main sections:
    1. Application Settings
    2. Legal & Support
    3. Version & Updates
    4. Restart & Support
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_surface"
    android:orientation="vertical"
    tools:ignore="UseCompatTextViewDrawableXml,UseAppTint">

    <!-- Main content container with vertical arrangement -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ================================== -->
        <!-- CARD 1: APPLICATION SETTINGS SECTION -->
        <!-- ================================== -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15"
            android:layout_marginTop="@dimen/_10"
            android:layout_marginEnd="@dimen/_15"
            android:layout_marginBottom="@dimen/_10"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/color_background"
            app:cardCornerRadius="@dimen/_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--
                    SETTING ITEM: Download Location
                    - Folder icon with right chevron
                    - Clickable container with pressed state
                -->
                <LinearLayout
                    android:id="@+id/btn_default_download_folder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_10"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_marginBottom="@dimen/_0"
                    android:background="@drawable/ic_button_negative_selector"
                    android:clickable="true"
                    android:orientation="vertical"
                    tools:ignore="TouchTargetSizeCheck">

                    <TextView
                        android:id="@+id/txt_default_download_folder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_8"
                        android:drawableStart="@drawable/ic_button_folder"
                        android:drawableEnd="@drawable/ic_button_open_small"
                        android:drawablePadding="@dimen/_7"
                        android:drawableTint="@color/color_secondary"
                        android:fontFamily="@font/application_font_family"
                        android:text="@string/text_download_location"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <!--
                    SETTING ITEM: Language Picker
                    - Language icon with right chevron
                    - Uniform styling with other settings
                -->
                <LinearLayout
                    android:id="@+id/btn_language_picker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_0"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_marginBottom="@dimen/_0"
                    android:background="@drawable/ic_button_negative_selector"
                    android:clickable="true"
                    android:orientation="vertical"
                    tools:ignore="TouchTargetSizeCheck">

                    <TextView
                        android:id="@+id/txt_language_picker"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_8"
                        android:drawableStart="@drawable/ic_button_language"
                        android:drawableEnd="@drawable/ic_button_open_small"
                        android:drawablePadding="@dimen/_5"
                        android:drawableTint="@color/color_secondary"
                        android:fontFamily="@font/application_font_family"
                        android:text="@string/text_application_language"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <!-- Visual divider between setting groups -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_5"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_marginBottom="@dimen/_5"
                    android:background="@color/transparent_dark" />

                <!--
                    SETTING ITEM: Browser Homepage
                    - Document icon with right chevron
                    - Leads to homepage configuration
                -->
                <LinearLayout
                    android:id="@+id/btn_browser_homepage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_0"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_marginBottom="@dimen/_0"
                    android:background="@drawable/ic_button_negative_selector"
                    android:clickable="true"
                    android:orientation="vertical"
                    tools:ignore="TouchTargetSizeCheck">

                    <TextView
                        android:id="@+id/txt_browser_homepage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_8"
                        android:drawableStart="@drawable/ic_button_document_big"
                        android:drawableEnd="@drawable/ic_button_open_small"
                        android:drawablePadding="@dimen/_5"
                        android:drawableTint="@color/color_secondary"
                        android:fontFamily="@font/application_font_family"
                        android:text="@string/text_browser_homepage"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <!--
                    TOGGLE ITEM: Video Grabber
                    - Video icon with toggle indicator
                    - Unchecked state by default
                -->
                <LinearLayout
                    android:id="@+id/btn_enable_video_grabber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_0"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_marginBottom="@dimen/_0"
                    android:background="@drawable/ic_button_negative_selector"
                    android:clickable="true"
                    android:orientation="vertical"
                    tools:ignore="TouchTargetSizeCheck">

                    <TextView
                        android:id="@+id/txt_enable_video_grabber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_8"
                        android:drawableStart="@drawable/ic_button_video"
                        android:drawableEnd="@drawable/ic_button_unchecked_circle_small"
                        android:drawablePadding="@dimen/_5"
                        android:drawableTint="@color/color_secondary"
                        android:fontFamily="@font/application_font_family"
                        android:text="@string/text_show_video_grabber"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <!--
                    TOGGLE ITEM: Popup Blocker
                    - Popup block icon with toggle
                    - Consistent toggle styling
                -->
                <LinearLayout
                    android:id="@+id/btn_enable_popup_blocker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_0"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_marginBottom="@dimen/_0"
                    android:background="@drawable/ic_button_negative_selector"
                    android:clickable="true"
                    android:orientation="vertical"
                    tools:ignore="TouchTargetSizeCheck">

                    <TextView
                        android:id="@+id/txt_enable_popup_blocker"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_8"
                        android:drawableStart="@drawable/ic_button_popup_block"
                        android:drawableEnd="@drawable/ic_button_unchecked_circle_small"
                        android:drawablePadding="@dimen/_5"
                        android:drawableTint="@color/color_secondary"
                        android:fontFamily="@font/application_font_family"
                        android:text="@string/text_block_popup_ads"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <!-- Visual divider between setting groups -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_5"
                    android:layout_marginEnd="@dimen/_5"
                    android:layout_marginBottom="@dimen/_5"
                    android:background="@color/transparent_dark" />

                <!--
                    TOGGLE ITEM: Notification Settings
                    - Notification icon with toggle
                    - Controls task notifications
                -->
                <LinearLayout
                    android:id="@+id/btn_hide_task_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_0"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_marginBottom="@dimen/_0"
                    android:background="@drawable/ic_button_negative_selector"
                    android:clickable="true"
                    android:orientation="vertical"
                    tools:ignore="TouchTargetSizeCheck">

                    <TextView
                        android:id="@+id/txt_hide_task_notifications"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_8"
                        android:drawableStart="@drawable/ic_button_notifications"
                        android:drawableEnd="@drawable/ic_button_unchecked_circle_small"
                        android:drawablePadding="@dimen/_5"
                        android:drawableTint="@color/color_secondary"
                        android:fontFamily="@font/application_font_family"
                        android:text="@string/text_hide_task_notifications"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <!--
                    TOGGLE ITEM: WiFi Only Downloads
                    - WiFi icon with toggle control
                    - Restricts downloads to WiFi only
                -->
                <LinearLayout
                    android:id="@+id/btn_wifi_only_downloads"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_0"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_marginBottom="@dimen/_0"
                    android:background="@drawable/ic_button_negative_selector"
                    android:clickable="true"
                    android:orientation="vertical"
                    tools:ignore="TouchTargetSizeCheck">

                    <TextView
                        android:id="@+id/txt_wifi_only_downloads"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_8"
                        android:drawableStart="@drawable/ic_button_wifi_signal"
                        android:drawableEnd="@drawable/ic_button_unchecked_circle_small"
                        android:drawablePadding="@dimen/_5"
                        android:drawableTint="@color/color_secondary"
                        android:fontFamily="@font/application_font_family"
                        android:text="@string/text_wifi_only_download"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <!--
                    TOGGLE ITEM: Notification Sound
                    - Audio icon with toggle control
                    - Enables/disables completion sounds
                -->
                <LinearLayout
                    android:id="@+id/btn_play_notification_sound"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_0"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_marginBottom="@dimen/_0"
                    android:background="@drawable/ic_button_negative_selector"
                    android:clickable="true"
                    android:orientation="vertical"
                    tools:ignore="TouchTargetSizeCheck">

                    <TextView
                        android:id="@+id/txt_play_notification_sound"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_8"
                        android:drawableStart="@drawable/ic_button_audio"
                        android:drawableEnd="@drawable/ic_button_unchecked_circle_small"
                        android:drawablePadding="@dimen/_5"
                        android:drawableTint="@color/color_secondary"
                        android:fontFamily="@font/application_font_family"
                        android:text="@string/text_play_sound_completion"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <!-- Visual divider between setting groups -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_5"
                    android:layout_marginEnd="@dimen/_5"
                    android:layout_marginBottom="@dimen/_5"
                    android:background="@color/transparent_dark" />

                <!--
                    SETTING ITEM: Advanced Settings
                    - Gear icon with right chevron
                    - Leads to additional configuration
                -->
                <LinearLayout
                    android:id="@+id/btn_advance_settings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_0"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_marginBottom="@dimen/_10"
                    android:background="@drawable/ic_button_negative_selector"
                    android:clickable="true"
                    android:orientation="vertical"
                    tools:ignore="TouchTargetSizeCheck">

                    <TextView
                        android:id="@+id/txt_advance_settings"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_8"
                        android:drawableStart="@drawable/ic_button_settings"
                        android:drawableEnd="@drawable/ic_button_open_small"
                        android:drawablePadding="@dimen/_5"
                        android:drawableTint="@color/color_secondary"
                        android:fontFamily="@font/application_font_family"
                        android:text="@string/text_other_advance_settings"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ================================= -->
        <!-- CARD 2: LEGAL & SUPPORT SECTION -->
        <!-- ================================= -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15"
            android:layout_marginTop="@dimen/_0"
            android:layout_marginEnd="@dimen/_15"
            android:layout_marginBottom="@dimen/_10"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/color_background"
            app:cardCornerRadius="@dimen/_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--
                    LEGAL ITEM: Terms & Conditions
                    - Document icon with right chevron
                    - Opens terms screen
                -->
                <LinearLayout
                    android:id="@+id/btn_open_terms_condition"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_10"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_marginBottom="@dimen/_0"
                    android:background="@drawable/ic_button_negative_selector"
                    android:clickable="true"
                    android:orientation="vertical"
                    tools:ignore="TouchTargetSizeCheck">

                    <TextView
                        android:id="@+id/txt_open_terms_condition"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_8"
                        android:drawableStart="@drawable/ic_button_term_conditions"
                        android:drawableEnd="@drawable/ic_button_open_small"
                        android:drawablePadding="@dimen/_5"
                        android:drawableTint="@color/color_secondary"
                        android:fontFamily="@font/application_font_family"
                        android:text="@string/text_terms_conditions"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <!--
                    LEGAL ITEM: Privacy Policy
                    - Privacy icon with right chevron
                    - Opens privacy policy
                -->
                <LinearLayout
                    android:id="@+id/btn_open_privacy_policy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_0"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_marginBottom="@dimen/_0"
                    android:background="@drawable/ic_button_negative_selector"
                    android:clickable="true"
                    android:orientation="vertical"
                    tools:ignore="TouchTargetSizeCheck">

                    <TextView
                        android:id="@+id/txt_open_privacy_policy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_8"
                        android:drawableStart="@drawable/ic_privacy_policy"
                        android:drawableEnd="@drawable/ic_button_open_small"
                        android:drawablePadding="@dimen/_5"
                        android:drawableTint="@color/color_secondary"
                        android:fontFamily="@font/application_font_family"
                        android:text="@string/text_privacy_policy"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <!--
                    LEGAL ITEM: Content Policy
                    - Policy document icon
                    - Opens content guidelines
                -->
                <LinearLayout
                    android:id="@+id/btn_open_content_policy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_0"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_marginBottom="@dimen/_0"
                    android:background="@drawable/ic_button_negative_selector"
                    android:clickable="true"
                    android:orientation="vertical"
                    tools:ignore="TouchTargetSizeCheck">

                    <TextView
                        android:id="@+id/txt_open_content_policy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_8"
                        android:drawableStart="@drawable/ic_button_content_policy"
                        android:drawableEnd="@drawable/ic_button_open_small"
                        android:drawablePadding="@dimen/_5"
                        android:drawableTint="@color/color_secondary"
                        android:fontFamily="@font/application_font_family"
                        android:text="@string/text_content_policy"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <!-- Visual divider between legal and support items -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_5"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_marginBottom="@dimen/_5"
                    android:background="@color/transparent_dark" />

                <!--
                    SUPPORT ITEM: Feedback
                    - Feedback icon with right chevron
                    - Opens feedback channel
                -->
                <LinearLayout
                    android:id="@+id/btn_open_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_0"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_marginBottom="@dimen/_0"
                    android:background="@drawable/ic_button_negative_selector"
                    android:clickable="true"
                    android:orientation="vertical"
                    tools:ignore="TouchTargetSizeCheck">

                    <TextView
                        android:id="@+id/txt_open_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_8"
                        android:drawableStart="@drawable/ic_button_feedback"
                        android:drawableEnd="@drawable/ic_button_open_small"
                        android:drawablePadding="@dimen/_5"
                        android:drawableTint="@color/color_secondary"
                        android:fontFamily="@font/application_font_family"
                        android:text="@string/text_your_send_feedback"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <!--
                    SUPPORT ITEM: About Info
                    - Information icon with chevron
                    - Shows app version and info
                -->
                <LinearLayout
                    android:id="@+id/btn_open_about_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_0"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_marginBottom="@dimen/_0"
                    android:background="@drawable/ic_button_negative_selector"
                    android:clickable="true"
                    android:orientation="vertical"
                    tools:ignore="TouchTargetSizeCheck">

                    <TextView
                        android:id="@+id/txt_open_about_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_8"
                        android:drawableStart="@drawable/ic_button_information"
                        android:drawableEnd="@drawable/ic_button_open_small"
                        android:drawablePadding="@dimen/_5"
                        android:drawableTint="@color/color_secondary"
                        android:fontFamily="@font/application_font_family"
                        android:text="@string/text_open_application_info"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <!--
                    ACTION ITEM: Share with Friends
                    - Share icon with right chevron
                    - Triggers app sharing intent
                -->
                <LinearLayout
                    android:id="@+id/btn_share_with_friends"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_0"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_marginBottom="@dimen/_10"
                    android:background="@drawable/ic_button_negative_selector"
                    android:clickable="true"
                    android:orientation="vertical"
                    tools:ignore="TouchTargetSizeCheck">

                    <TextView
                        android:id="@+id/txt_share_with_friends"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_8"
                        android:drawableStart="@drawable/ic_button_share"
                        android:drawableEnd="@drawable/ic_button_open_small"
                        android:drawablePadding="@dimen/_5"
                        android:drawableTint="@color/color_secondary"
                        android:fontFamily="@font/application_font_family"
                        android:text="@string/text_share_with_friends"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ================================= -->
        <!-- CARD 3: VERSION & UPDATES SECTION -->
        <!-- ================================= -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15"
            android:layout_marginTop="@dimen/_0"
            android:layout_marginEnd="@dimen/_15"
            android:layout_marginBottom="@dimen/_10"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/color_background"
            app:cardCornerRadius="@dimen/_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Version Information Text -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_10"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_marginBottom="@dimen/_0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_version_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autoLink="web"
                        android:fontFamily="@font/application_font_family"
                        android:gravity="center"
                        android:text="@string/text__"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/message_text_size" />
                </LinearLayout>

                <!--
                    ACTION BUTTON: Check for Updates
                    - Download icon with contrasting background
                    - Bold text for emphasis
                    - Secondary button style
                -->
                <RelativeLayout
                    android:id="@+id/btn_check_new_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_10"
                    android:layout_marginEnd="@dimen/_10"
                    android:layout_marginBottom="@dimen/_10"
                    android:background="@drawable/ic_button_selector_secondary"
                    android:clickable="true"
                    android:elevation="@dimen/_2"
                    tools:ignore="TouchTargetSizeCheck">

                    <TextView
                        android:id="@+id/txt_check_new_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/_7"
                        android:drawableStart="@drawable/ic_button_download"
                        android:drawablePadding="@dimen/_5"
                        android:drawableTint="@color/color_background"
                        android:fontFamily="@font/application_font_family"
                        android:gravity="center"
                        android:text="@string/title_check_new_update"
                        android:textColor="@color/color_on_secondary"
                        android:textSize="@dimen/normal_text_size"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ================================= -->
        <!-- CARD 4: RESTART & SUPPORT SECTION -->
        <!-- ================================= -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15"
            android:layout_marginTop="@dimen/_0"
            android:layout_marginEnd="@dimen/_15"
            android:layout_marginBottom="@dimen/_10"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/color_background"
            app:cardCornerRadius="@dimen/_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_15"
                android:layout_marginTop="@dimen/_10"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_8"
                android:orientation="vertical">

                <!-- Support Thank You Message -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autoLink="web"
                    android:fontFamily="@font/application_font_family"
                    android:gravity="center"
                    android:text="@string/text_special_support_thank_you"
                    android:textColor="@color/color_text_primary"
