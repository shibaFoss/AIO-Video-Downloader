<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="UseCompatTextViewDrawableXml">

    <ListView
        android:id="@+id/container_download_tasks_finished"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_0"
        android:layout_marginTop="@dimen/_0"
        android:layout_marginEnd="@dimen/_0"
        android:layout_marginBottom="@dimen/_0"
        android:divider="@color/transparent"
        android:visibility="gone" />

    <androidx.cardview.widget.CardView
        android:id="@+id/empty_downloads_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/_15"
        android:layout_marginTop="@dimen/_0"
        android:layout_marginEnd="@dimen/_15"
        android:layout_marginBottom="@dimen/_0"
        android:orientation="vertical"
        android:visibility="gone"
        app:cardBackgroundColor="@color/color_background"
        app:cardCornerRadius="@dimen/_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/image_empty_downloads"
                android:layout_width="@dimen/_200"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="-30dp"
                android:layout_marginBottom="-30dp"
                android:adjustViewBounds="true"
                android:hardwareAccelerated="true"
                android:importantForAccessibility="no"
                android:layerType="hardware"
                app:lottie_autoPlay="true"
                app:lottie_enableMergePathsForKitKatAndAbove="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/empty_downloads_animation" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginStart="@dimen/_25"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_25"
                android:layout_marginBottom="@dimen/_8"
                android:gravity="center"
                android:text="@string/text_you_dont_have_any_downloads"
                android:textColor="@color/color_text_primary"
                android:textSize="@dimen/message_text_size" />

            <RelativeLayout
                android:id="@+id/button_how_to_download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_10"
                android:background="@drawable/ic_button_selector_secondary"
                android:clickable="true"
                android:elevation="@dimen/_2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_7"
                    android:drawableStart="@drawable/ic_button_question"
                    android:drawablePadding="@dimen/_5"
                    android:drawableTint="@color/color_background"
                    android:fontFamily="@font/font_family_bold"
                    android:gravity="center"
                    android:text="@string/title_how_to_download"
                    android:textColor="@color/color_on_secondary"
                    android:textSize="@dimen/normal_text_size" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/button_open_active_downloads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginStart="@dimen/_15"
        android:layout_marginEnd="@dimen/_15"
        android:layout_marginBottom="@dimen/_25"
        android:background="@drawable/ic_button_selector_background"
        android:elevation="@dimen/_5"
        android:orientation="vertical"
        android:visibility="gone">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/image_open_active_downloads"
            android:layout_width="@dimen/_50"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/_5"
            android:adjustViewBounds="true"
            android:hardwareAccelerated="true"
            android:importantForAccessibility="no"
            android:layerType="hardware"
            app:lottie_autoPlay="true"
            app:lottie_enableMergePathsForKitKatAndAbove="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/active_tasks_animation" />
    </LinearLayout>

</RelativeLayout>