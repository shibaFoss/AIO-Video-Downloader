<?xml version="1.0" encoding="utf-8"?><!--
    Main container layout for download tasks screen
    Uses RelativeLayout as root container to layer different views
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="UseCompatTextViewDrawableXml">

    <!--
        ListView to display completed download tasks
        Initially hidden (visibility="gone") and shown when there are downloads
        Transparent divider removes default line separators between items
    -->
    <ListView
        android:id="@+id/container_download_tasks_finished"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_0"
        android:layout_marginTop="@dimen/_0"
        android:layout_marginEnd="@dimen/_0"
        android:layout_marginBottom="@dimen/_0"
        android:divider="@color/transparent"
        android:visibility="gone" />

    <!--
        CardView to show when there are no downloads (empty state)
        Centered in parent with rounded corners and background color
        Initially visible (visibility="visible") and hidden when downloads exist
    -->
    <androidx.cardview.widget.CardView
        android:id="@+id/container_empty_downloads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/_15"
        android:layout_marginTop="@dimen/_0"
        android:layout_marginEnd="@dimen/_15"
        android:layout_marginBottom="@dimen/_0"
        android:orientation="vertical"
        android:visibility="visible"
        app:cardBackgroundColor="@color/color_background"
        app:cardCornerRadius="@dimen/_10">

        <!-- LinearLayout container for empty state content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--
                Empty state illustration image
                Centered horizontally and vertically with margin
                Hardware accelerated for better performance
            -->
            <ImageView
                android:id="@+id/img_empty_downloads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="@dimen/_10"
                android:adjustViewBounds="true"
                android:hardwareAccelerated="true"
                android:importantForAccessibility="no"
                android:src="@drawable/image_empty_box" />

            <!--
                Empty state message text
                Centered with horizontal margins
                Uses custom font family and primary text color
            -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginStart="@dimen/_25"
                android:layout_marginTop="@dimen/_10"
                android:layout_marginEnd="@dimen/_25"
                android:layout_marginBottom="@dimen/_8"
                android:fontFamily="@font/application_font_family"
                android:gravity="center"
                android:text="@string/text_you_dont_have_any_downloads"
                android:textColor="@color/color_text_primary"
                android:textSize="@dimen/message_text_size" />

            <!--
                "How to download" button
                Clickable RelativeLayout with elevation and selector background
                Has horizontal margins and bottom margin
            -->
            <RelativeLayout
                android:id="@+id/btn_how_to_download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_10"
                android:background="@drawable/ic_button_selector_secondary"
                android:clickable="true"
                android:elevation="@dimen/_2"
                tools:ignore="TouchTargetSizeCheck">

                <!--
                    Button text with question mark icon
                    Icon is tinted to match background
                    Uses bold text style and centered in parent
                -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_7"
                    android:drawableStart="@drawable/ic_button_question"
                    android:drawablePadding="@dimen/_5"
                    android:drawableTint="@color/color_background"
                    android:fontFamily="@font/application_font_family"
                    android:gravity="center"
                    android:text="@string/title_how_to_download"
                    android:textColor="@color/color_on_secondary"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--
        Floating action button for active downloads
        Positioned at bottom-right of screen with elevation
        Initially hidden (visibility="gone") and shown when active downloads exist
        Uses Lottie animation for visual appeal
    -->
    <LinearLayout
        android:id="@+id/btn_open_active_downloads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginStart="@dimen/_15"
        android:layout_marginEnd="@dimen/_15"
        android:layout_marginBottom="@dimen/_25"
        android:background="@drawable/ic_button_selector_background"
        android:elevation="@dimen/_5"
        android:orientation="vertical"
        android:visibility="gone">

        <!--
            Lottie animation view for the FAB
            Auto-playing, looping animation
            Hardware accelerated and optimized for performance
        -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/img_open_active_downloads"
            android:layout_width="@dimen/_50"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/_5"
            android:adjustViewBounds="true"
            android:hardwareAccelerated="true"
            android:importantForAccessibility="no"
            android:layerType="hardware"
            app:lottie_autoPlay="true"
            app:lottie_enableMergePathsForKitKatAndAbove="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/animation_active_tasks" />
    </LinearLayout>

</RelativeLayout>