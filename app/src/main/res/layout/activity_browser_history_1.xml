<?xml version="1.0" encoding="utf-8"?><!--
BROWSER HISTORY ACTIVITY LAYOUT
Displays user's browsing history with:
1. Action bar with title and clear button
2. Empty state indicator when no history exists
3. ListView for history items
4. Load more button at bottom
-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_surface"
    android:orientation="vertical"
    tools:context="app.ui.main.fragments.browser.activities.BookmarksActivity"
    tools:ignore="UseCompatTextViewDrawableXml,UseAppTint,VisualLintBounds">

    <!--
    TOP ACTION BAR SECTION
    Contains back button, title, and clear history button
    Features:
    - Fixed height of 50dp
    - Rounded corners (10dp radius)
    - Standard margins (15dp sides, 10dp top)
    -->
    <androidx.cardview.widget.CardView
        android:id="@+id/top_layout_actionbar_section"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_15"
        android:layout_marginTop="@dimen/_10"
        android:layout_marginEnd="@dimen/_15"
        android:layout_marginBottom="@dimen/_0"
        app:cardBackgroundColor="@color/color_background"
        app:cardCornerRadius="@dimen/_10">

        <RelativeLayout
            android:id="@+id/container_actionbar_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Back button (left side) -->
            <RelativeLayout
                android:id="@+id/btn_left_actionbar"
                android:layout_width="@dimen/_50"
                android:layout_height="match_parent"
                android:background="@drawable/ic_button_negative_selector"
                android:clickable="true"
                tools:ignore="SpeakableTextPresentCheck">

                <!-- Back arrow icon -->
                <ImageView
                    android:id="@+id/btn_left_actionbar_img"
                    android:layout_width="@dimen/_30"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_button_actionbar_back"
                    android:tint="@color/color_secondary"
                    tools:ignore="ImageContrastCheck" />
            </RelativeLayout>

            <!-- Center title -->
            <TextView
                android:id="@+id/title_actionbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_10"
                android:layout_marginBottom="@dimen/_0"
                android:layout_toStartOf="@id/btn_right_actionbar"
                android:layout_toEndOf="@id/btn_left_actionbar"
                android:ellipsize="end"
                android:fontFamily="@font/application_font_family"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/title_browser_history"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold" />

            <!-- Clear history button (right side) -->
            <RelativeLayout
                android:id="@+id/btn_right_actionbar"
                android:layout_width="@dimen/_50"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_button_negative_selector"
                android:clickable="true"
                tools:ignore="SpeakableTextPresentCheck">

                <!-- Clear (X) icon -->
                <ImageView
                    android:id="@+id/btn_right_actionbar_img"
                    android:layout_width="@dimen/_30"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_button_clear"
                    android:tint="@color/color_secondary"
                    tools:ignore="ImageContrastCheck" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!--
    EMPTY STATE INDICATOR
    Shown when no browsing history exists
    Features:
    - Centered in parent
    - Empty box illustration
    - Informational text
    - Rounded corners (10dp radius)
    -->
    <androidx.cardview.widget.CardView
        android:id="@+id/empty_history_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/_15"
        android:layout_marginTop="@dimen/_0"
        android:layout_marginEnd="@dimen/_15"
        android:layout_marginBottom="@dimen/_0"
        android:orientation="vertical"
        android:visibility="visible"
        app:cardBackgroundColor="@color/color_background"
        app:cardCornerRadius="@dimen/_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <!-- Empty box illustration -->
            <ImageView
                android:id="@+id/img_empty_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="@dimen/_10"
                android:adjustViewBounds="true"
                android:hardwareAccelerated="true"
                android:importantForAccessibility="no"
                android:src="@drawable/image_empty_box" />

            <!-- Empty state message -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginStart="@dimen/_10"
                android:layout_marginTop="@dimen/_10"
                android:layout_marginEnd="@dimen/_10"
                android:layout_marginBottom="@dimen/_10"
                android:fontFamily="@font/application_font_family"
                android:gravity="center"
                android:text="@string/text_your_browsing_history_empty"
                android:textColor="@color/color_text_primary"
                android:textSize="@dimen/message_text_size" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--
    HISTORY LIST VIEW
    Primary content area showing browsing history
    Features:
    - Takes remaining space between action bar and bottom section
    - 8dp margins top/bottom
    - Transparent divider between items
    -->
    <ListView
        android:id="@+id/list_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_section"
        android:layout_below="@+id/top_layout_actionbar_section"
        android:layout_marginStart="@dimen/_0"
        android:layout_marginTop="@dimen/_8"
        android:layout_marginEnd="@dimen/_0"
        android:layout_marginBottom="@dimen/_8"
        android:divider="@color/transparent"
        android:visibility="visible" />

    <!--
    BOTTOM SECTION
    Contains the "Load More" action button
    Features:
    - Fixed to bottom of screen
    - Secondary colored button with plus icon
    - Standard margins (15dp horizontal, 10dp bottom)
    - Elevation for depth
    -->
    <LinearLayout
        android:id="@+id/bottom_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <!-- Load More button -->
        <RelativeLayout
            android:id="@+id/btn_load_more_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15"
            android:layout_marginTop="@dimen/_0"
            android:layout_marginEnd="@dimen/_15"
            android:layout_marginBottom="@dimen/_10"
            android:background="@drawable/ic_button_selector_secondary"
            android:clickable="true"
            android:elevation="@dimen/_2"
            tools:ignore="UselessParent,TouchTargetSizeCheck">

            <!-- Button label with plus icon -->
            <TextView
                android:id="@+id/btn_dialog_positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/_7"
                android:drawableStart="@drawable/ic_button_add_plus"
                android:drawablePadding="@dimen/_5"
                android:drawableTint="@color/color_background"
                android:fontFamily="@font/application_font_family"
                android:gravity="center"
                android:text="@string/text_load_more_bookmarks"
                android:textColor="@color/color_on_secondary"
                android:textSize="@dimen/normal_text_size"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>