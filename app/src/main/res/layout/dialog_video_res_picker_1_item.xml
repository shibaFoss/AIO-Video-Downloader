<?xml version="1.0" encoding="utf-8"?><!--
    Video Format Item Layout:
    - Displays video resolution and file size information
    - Used as an item in a grid/list of available formats
    - Features rounded border with elevation
    - Centered text with primary and secondary information
-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--
        Main container LinearLayout:
        - Wraps all content vertically
        - Centered in parent RelativeLayout
        - 5dp margin on all sides
        - Rounded border background
        - 2dp elevation for shadow
    -->
    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_5"
        android:background="@drawable/rounded_secondary_color_border"
        android:elevation="@dimen/_2"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <!--
            Resolution TextView (Primary information):
            - Bold text style
            - Primary text color
            - Sub-heading text size
            - Centered horizontally
            - 5dp side margins
            - 8dp top margin
            - Single line with ellipsis
            - Custom font family
        -->
        <TextView
            android:id="@+id/txt_resolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5"
            android:layout_marginTop="@dimen/_8"
            android:layout_marginEnd="@dimen/_5"
            android:layout_marginBottom="@dimen/_0"
            android:fontFamily="@font/application_font_family"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/text__"
            android:textColor="@color/color_text_primary"
            android:textSize="@dimen/sub_heading_text_size"
            android:textStyle="bold" />

        <!--
            File Size TextView (Secondary information):
            - Semi-transparent (alpha 0.5)
            - Secondary text color
            - Message text size
            - Centered horizontally
            - 5dp side margins
            - 8dp bottom margin
            - Single line with ellipsis
            - Custom font family
        -->
        <TextView
            android:id="@+id/txt_file_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5"
            android:layout_marginTop="@dimen/_0"
            android:layout_marginEnd="@dimen/_5"
            android:layout_marginBottom="@dimen/_8"
            android:alpha="0.5"
            android:fontFamily="@font/application_font_family"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/text__"
            android:textColor="@color/color_text_secondary"
            android:textSize="@dimen/message_text_size"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>
</RelativeLayout>