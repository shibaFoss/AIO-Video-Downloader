<?xml version="1.0" encoding="utf-8"?>
<!--
    This layout defines a custom dialog for video file information with:
    - A card view container with rounded corners and elevation
    - A thumbnail section with video preview
    - Video title and resolution information
    - A download action button
    - Status information text
-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="UseAppTint,UseCompatTextViewDrawableXml">

    <!--
        Main CardView container with material design styling:
        - Background color from resources
        - Rounded corners with radius defined in resources
        - Elevation for shadow effect
        - Margin around the card
    -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_5"
        android:layout_marginTop="@dimen/_10"
        android:layout_marginEnd="@dimen/_5"
        android:layout_marginBottom="@dimen/_10"
        app:cardBackgroundColor="@color/color_background"
        app:cardCornerRadius="@dimen/_10"
        app:cardElevation="@dimen/_5">

        <!-- Vertical LinearLayout to arrange all child views in a column -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--
                RelativeLayout container for the video info card:
                - Acts as a clickable container
                - Has margin from resources
                - Background selector for click effects
                - Elevation for shadow
            -->
            <RelativeLayout
                android:id="@+id/btn_file_info_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8"
                android:layout_marginTop="@dimen/_8"
                android:layout_marginEnd="@dimen/_8"
                android:layout_marginBottom="@dimen/_8"
                android:background="@drawable/ic_button_selector_secondary"
                android:clickable="true"
                android:elevation="@dimen/_2"
                tools:ignore="DuplicateSpeakableTextCheck">

                <!--
                    CardView container for the video thumbnail:
                    - Fixed width and height from resources
                    - Rounded corners
                    - Margin around the thumbnail
                -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/thumbnail_container"
                    android:layout_width="@dimen/_85"
                    android:layout_height="@dimen/_55"
                    android:layout_marginStart="@dimen/_5"
                    android:layout_marginTop="@dimen/_5"
                    android:layout_marginEnd="@dimen/_0"
                    android:layout_marginBottom="@dimen/_5"
                    app:cardBackgroundColor="@color/color_background"
                    app:cardCornerRadius="@dimen/_5">

                    <!--
                        ImageView for video thumbnail:
                        - Scales and crops image to fit
                        - Default placeholder image
                        - Accessibility optimized (no importance for accessibility)
                    -->
                    <ImageView
                        android:id="@+id/image_video_thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:adjustViewBounds="true"
                        android:importantForAccessibility="no"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image_no_thumb_available"
                        tools:ignore="ImageContrastCheck" />

                </androidx.cardview.widget.CardView>

                <!--
                    RelativeLayout container for video metadata:
                    - Positioned to the right of thumbnail
                    - Contains title, resolution info, and favicon
                -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_8"
                    android:layout_marginEnd="@dimen/_5"
                    android:layout_toEndOf="@+id/thumbnail_container"
                    android:orientation="vertical">

                    <!--
                        TextView for video title:
                        - Marquee effect for long text
                        - Bold style
                        - Custom font family
                        - Single line with ellipsis
                    -->
                    <TextView
                        android:id="@+id/txt_video_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5"
                        android:layout_marginBottom="@dimen/_3"
                        android:layout_toStartOf="@+id/img_url_favicon"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/application_font_family"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/text__"
                        android:textColor="@color/color_on_secondary"
                        android:textSize="@dimen/normal_text_size"
                        android:textStyle="bold" />

                    <!--
                        LinearLayout container for resolution info:
                        - Semi-transparent background
                        - Positioned below title
                    -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_video_title"
                        android:layout_toStartOf="@+id/img_url_favicon"
                        android:alpha="0.5"
                        android:background="@drawable/rounded_transparent_white_f5"
                        android:orientation="vertical">

                        <!--
                            TextView for video resolution:
                            - Small text size
                            - Single line with ellipsis
                            - Custom font family
                        -->
                        <TextView
                            android:id="@+id/text_video_resolution"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5"
                            android:layout_marginTop="@dimen/_2"
                            android:layout_marginEnd="@dimen/_5"
                            android:layout_marginBottom="@dimen/_2"
                            android:alpha="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/application_font_family"
                            android:singleLine="true"
                            android:text="@string/text__"
                            android:textColor="@color/color_on_secondary"
                            android:textSize="@dimen/small_text_size"
                            tools:ignore="TextContrastCheck" />
                    </LinearLayout>

                    <!--
                        ImageView for favicon/action icon:
                        - Fixed size from resources
                        - Centered vertically
                        - Aligned to parent end
                        - Tint color from resources
                    -->
                    <ImageView
                        android:id="@+id/img_url_favicon"
                        android:layout_width="@dimen/_30"
                        android:layout_height="@dimen/_30"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10"
                        android:layout_marginEnd="@dimen/_5"
                        android:adjustViewBounds="true"
                        android:importantForAccessibility="no"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_button_open_v2"
                        android:tint="@color/color_on_secondary"
                        android:visibility="visible"
                        tools:ignore="ImageContrastCheck" />

                </RelativeLayout>
            </RelativeLayout>

            <!--
                RelativeLayout container for download button:
                - Clickable container with selector background
                - Elevation for shadow
                - Margin from resources
            -->
            <RelativeLayout
                android:id="@+id/btn_dialog_positive_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_5"
                android:background="@drawable/ic_button_selector_secondary"
                android:clickable="true"
                android:elevation="@dimen/_2"
                tools:ignore="TouchTargetSizeCheck">

                <!--
                    TextView acting as download button:
                    - Centered in parent
                    - Download icon at start
                    - Bold text style
                    - Single line with ellipsis
                    - Custom font family
                -->
                <TextView
                    android:id="@+id/btn_dialog_positive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_7"
                    android:drawableStart="@drawable/ic_button_download"
                    android:drawablePadding="@dimen/_5"
                    android:drawableTint="@color/color_background"
                    android:ellipsize="end"
                    android:fontFamily="@font/application_font_family"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/title_download_now"
                    android:textColor="@color/color_on_secondary"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!--
                TextView for status information:
                - Centered horizontally
                - Small text size
                - Secondary text color
                - Maximum 2 lines with ellipsis
                - Custom font family
            -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_15"
                android:layout_marginTop="@dimen/_2"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_8"
                android:ellipsize="end"
                android:fontFamily="@font/application_font_family"
                android:maxLines="2"
                android:text="@string/text_go_to_tasks_tab_to_see_progress"
                android:textColor="@color/color_text_secondary"
                android:textSize="@dimen/small_text_size" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>