<?xml version="1.0" encoding="utf-8"?>
<!--
    LAYOUT: Web Video Guide Dialog
    PURPOSE: Displays a step-by-step visual guide for web video downloading
    FEATURES:
    - Title header with surface background
    - Scrollable content area for multiple guide steps
    - Each step contains an image card and descriptive text
    - Confirmation button at bottom
    STYLE: Inherits from @style/style_dialog
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="UseAppTint,UseCompatTextViewDrawableXml">

    <!--
        PRIMARY CONTAINER: Material CardView
        - Applies consistent dialog styling
        - 5dp side margins, 10dp top/bottom margins
        - Custom background color (@color/color_background)
        - 10dp corner radius for rounded corners
        - 5dp elevation for material shadow effect
    -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_5"
        android:layout_marginTop="@dimen/_10"
        android:layout_marginEnd="@dimen/_5"
        android:layout_marginBottom="@dimen/_10"
        app:cardBackgroundColor="@color/color_background"
        app:cardCornerRadius="@dimen/_10"
        app:cardElevation="@dimen/_5">

        <!-- MAIN CONTENT: Vertical LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--
                TITLE SECTION: Surface Background
                - Uses @color/color_surface for distinct header area
                - Contains single centered title text
            -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_surface"
                android:orientation="vertical">

                <!--
                    DIALOG TITLE: TextView
                    - Centered bold text
                    - 10dp margin on all sides
                    - Single line with ellipsis for long text
                    - Custom application font family
                    - Primary text color
                    - Normal text size
                    DEFAULT TEXT: @string/title_guide_for_web_videos
                -->
                <TextView
                    android:id="@+id/txt_dialog_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10"
                    android:ellipsize="end"
                    android:fontFamily="@font/application_font_family"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/title_guide_for_web_videos"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <!--
                GUIDE CONTENT: ScrollView
                - Takes remaining space (layout_weight=1)
                - Contains multiple guide steps (image + text pairs)
            -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <!-- Guide steps container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10"
                    android:layout_marginTop="@dimen/_3"
                    android:layout_marginEnd="@dimen/_10"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <!--
                        GUIDE STEP 1: Image Card + Text
                        - CardView with 5dp margin and 10dp corner radius
                        - ImageView with adjustViewBounds to maintain aspect ratio
                        - Descriptive text below with 2dp margin
                    -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5"
                        app:cardBackgroundColor="@color/color_background"
                        app:cardCornerRadius="@dimen/_10">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:importantForAccessibility="no"
                            android:src="@drawable/ic_web_how_to_guide_1" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="@dimen/_2"
                        android:fontFamily="@font/application_font_family"
                        android:gravity="center"
                        android:text="@string/text_web_how_to_guide_1"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/message_text_size" />

                    <!--
                        GUIDE STEP 2: Image Card + Text
                        - Same structure as Step 1
                        - Different image and text resources
                    -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5"
                        app:cardBackgroundColor="@color/color_background"
                        app:cardCornerRadius="@dimen/_10">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:importantForAccessibility="no"
                            android:src="@drawable/ic_web_how_to_guide_2" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="@dimen/_2"
                        android:fontFamily="@font/application_font_family"
                        android:gravity="center"
                        android:text="@string/text_web_how_to_guide_2"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/message_text_size" />

                    <!--
                        GUIDE STEP 3: Image Card + Text
                        - Same structure with different margins
                        - 5dp side margins, 5dp top, 8dp bottom
                        - Different image and text resources
                    -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5"
                        android:layout_marginTop="@dimen/_5"
                        android:layout_marginEnd="@dimen/_5"
                        android:layout_marginBottom="@dimen/_8"
                        app:cardBackgroundColor="@color/color_background"
                        app:cardCornerRadius="@dimen/_10">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:importantForAccessibility="no"
                            android:src="@drawable/ic_web_how_to_guide_3" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="@dimen/_2"
                        android:fontFamily="@font/application_font_family"
                        android:gravity="center"
                        android:text="@string/text_web_how_to_guide_3"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/message_text_size" />

                </LinearLayout>
            </ScrollView>

            <!--
                CONFIRMATION BUTTON: "Okay" Action
                - RelativeLayout provides clickable surface
                - 15dp horizontal margins, 8dp vertical margins
                - Secondary button selector background
                - 2dp elevation for material effect
                - Contains checkmark icon and text
            -->
            <RelativeLayout
                android:id="@+id/btn_dialog_positive_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15"
                android:layout_marginTop="@dimen/_8"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_8"
                android:background="@drawable/ic_button_selector_secondary"
                android:clickable="true"
                android:elevation="@dimen/_2"
                tools:ignore="TouchTargetSizeCheck">

                <!--
                    BUTTON LABEL: TextView with icon
                    - Centered in container with 7dp margin
                    - Checkmark icon (@drawable/ic_button_checked_circle)
                    - 5dp padding between icon and text
                    - Bold text style
                    - Custom application font family
                    - Text color: @color/color_on_secondary
                    - Text size: @dimen/normal_text_size
                    DEFAULT TEXT: @string/title_okay
                -->
                <TextView
                    android:id="@+id/btn_dialog_positive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_7"
                    android:drawableStart="@drawable/ic_button_checked_circle"
                    android:drawablePadding="@dimen/_5"
                    android:drawableTint="@color/color_background"
                    android:fontFamily="@font/application_font_family"
                    android:gravity="center"
                    android:text="@string/title_okay"
                    android:textColor="@color/color_on_secondary"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>