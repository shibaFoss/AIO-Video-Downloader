<?xml version="1.0" encoding="utf-8"?>
<!--
HISTORY ACTIONS DIALOG LAYOUT
A popup dialog showing available actions for a history item
Structure:
1. Root dialog container with card style
2. Vertical list of action buttons:
   - Open in browser
   - Share history item
   - Add to bookmarks
   - Copy history link
   - Delete history item
-->

<!-- Root dialog container using dialog style from styles.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="UseAppTint,UseCompatTextViewDrawableXml">

    <!--
    MAIN DIALOG CARD
    Container for all action buttons with:
    - Background color matching app theme
    - Rounded corners (10dp radius)
    - Slight elevation (2dp) for depth
    - Standard margins (5dp sides, 10dp top/bottom)
    -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_5"
        android:layout_marginTop="@dimen/_10"
        android:layout_marginEnd="@dimen/_5"
        android:layout_marginBottom="@dimen/_10"
        app:cardBackgroundColor="@color/color_background"
        app:cardCornerRadius="@dimen/_10"
        app:cardElevation="@dimen/_2">

        <!-- Vertical container for action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--
            OPEN IN BROWSER BUTTON
            First/top action button with:
            - Open icon (tinted secondary color)
            - Negative selector background (press effect)
            - Standard text styling
            - 10dp start margin, 15dp end margin
            - 10dp top margin
            -->
            <LinearLayout
                android:id="@+id/btn_open_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10"
                android:layout_marginTop="@dimen/_10"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_0"
                android:background="@drawable/ic_button_negative_selector"
                android:clickable="true"
                android:orientation="vertical"
                tools:ignore="TouchTargetSizeCheck">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_8"
                    android:drawableStart="@drawable/ic_button_open_v2"
                    android:drawablePadding="@dimen/_5"
                    android:drawableTint="@color/color_secondary"
                    android:fontFamily="@font/application_font_family"
                    android:text="@string/text_open_in_browser"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!--
            SHARE HISTORY BUTTON
            Second action button with:
            - Share icon (tinted secondary color)
            - Same styling as open button
            - No top/bottom margin between buttons
            -->
            <LinearLayout
                android:id="@+id/button_share_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_0"
                android:background="@drawable/ic_button_negative_selector"
                android:clickable="true"
                android:orientation="vertical"
                tools:ignore="TouchTargetSizeCheck">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_8"
                    android:drawableStart="@drawable/ic_button_share_v3"
                    android:drawablePadding="@dimen/_5"
                    android:drawableTint="@color/color_secondary"
                    android:fontFamily="@font/application_font_family"
                    android:text="@string/text_share_with_others"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!--
            ADD TO BOOKMARKS BUTTON
            Third action button with:
            - Bookmark icon (tinted secondary color)
            - Same styling as other buttons
            -->
            <LinearLayout
                android:id="@+id/button_add_to_bookmark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_0"
                android:background="@drawable/ic_button_negative_selector"
                android:clickable="true"
                android:orientation="vertical"
                tools:ignore="TouchTargetSizeCheck">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_8"
                    android:drawableStart="@drawable/ic_button_save_bookmark"
                    android:drawablePadding="@dimen/_5"
                    android:drawableTint="@color/color_secondary"
                    android:fontFamily="@font/application_font_family"
                    android:text="@string/text_add_to_bookmark"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!--
            COPY HISTORY BUTTON
            Fourth action button with:
            - Clipboard icon (tinted secondary color)
            - Same styling as other buttons
            -->
            <LinearLayout
                android:id="@+id/button_copy_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_0"
                android:background="@drawable/ic_button_negative_selector"
                android:clickable="true"
                android:orientation="vertical"
                tools:ignore="TouchTargetSizeCheck">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_8"
                    android:drawableStart="@drawable/ic_button_clipboard_v2"
                    android:drawablePadding="@dimen/_5"
                    android:drawableTint="@color/color_secondary"
                    android:fontFamily="@font/application_font_family"
                    android:text="@string/text_copy_history"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <!--
            DELETE HISTORY BUTTON
            Fifth/bottom action button with:
            - Delete icon (tinted secondary color)
            - Same styling but with bottom margin (10dp)
            - Typically appears visually distinct (red in many apps)
            -->
            <LinearLayout
                android:id="@+id/button_delete_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10"
                android:layout_marginTop="@dimen/_0"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_10"
                android:background="@drawable/ic_button_negative_selector"
                android:clickable="true"
                android:orientation="vertical"
                tools:ignore="TouchTargetSizeCheck">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_8"
                    android:drawableStart="@drawable/ic_button_delete_v2"
                    android:drawablePadding="@dimen/_5"
                    android:drawableTint="@color/color_secondary"
                    android:fontFamily="@font/application_font_family"
                    android:text="@string/text_delete_history"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>