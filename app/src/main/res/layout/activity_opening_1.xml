<?xml version="1.0" encoding="utf-8"?><!--
    Splash Screen Layout
    Displays app branding, loading animation, and version information
    Uses RelativeLayout as root for flexible element positioning
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_surface">

    <!--
        Main content container centered vertically and horizontally
        Contains app logo, name, and loading animation
        Uses vertical LinearLayout for sequential element arrangement
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <!--
            App Logo Image
            - Fixed width (150dp) with aspect-ratio preserved
            - Centered horizontally with top/bottom margins
            - Has subtle elevation for depth
            - Accessibility ignored (decorative image)
        -->
        <ImageView
            android:id="@+id/img_opening_splash"
            android:layout_width="@dimen/_150"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20"
            android:layout_marginBottom="@dimen/_10"
            android:adjustViewBounds="true"
            android:elevation="@dimen/_2"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_launcher_logo_v4" />

        <!--
            App Name Text
            - Centered below the logo
            - Uses application font family with bold style
            - Extra large text size for prominence
            - Small padding for visual comfort
        -->
        <TextView
            android:id="@+id/txt_opening_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5"
            android:fontFamily="@font/application_font_family"
            android:gravity="center"
            android:paddingStart="@dimen/_10"
            android:paddingTop="@dimen/_2"
            android:paddingEnd="@dimen/_10"
            android:paddingBottom="@dimen/_2"
            android:text="@string/title_video_downloader"
            android:textColor="@color/color_text_primary"
            android:textSize="@dimen/extra_large_text_size"
            android:textStyle="bold" />

        <!--
            Loading Animation (Lottie)
            - Circular progress animation
            - Auto-playing, looping animation
            - Hardware accelerated for smooth performance
            - Negative bottom margin for visual overlap
            - Uses merge paths for better rendering
        -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/img_progress_circle"
            android:layout_width="@dimen/_150"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="-25dp"
            android:adjustViewBounds="true"
            android:hardwareAccelerated="true"
            android:importantForAccessibility="no"
            android:layerType="hardware"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            app:lottie_enableMergePathsForKitKatAndAbove="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/anim_color_circle_loading"
            tools:ignore="ImageContrastCheck,VisualLintBounds" />

        <!--
            Spacer for Visual Separation
            - Creates breathing room between center content and footer
            - Fixed height of 50dp
        -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50" />
    </LinearLayout>

    <!--
        Credit Information Text
        - Positioned above version text
        - Centered horizontally
        - Normal/small text size for secondary information
    -->
    <TextView
        android:id="@+id/txt_credit_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_version_info"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/application_font_family"
        android:text="@string/text_app_splash_credit"
        android:textColor="@color/color_text_primary"
        android:textSize="@dimen/normal_text_size_small" />

    <!--
        Version Information Text
        - Fixed at screen bottom with margin
        - Centered horizontally
        - Small text size for discreet display
        - Initially empty (populated programmatically)
    -->
    <TextView
        android:id="@+id/txt_version_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_50"
        android:fontFamily="@font/application_font_family"
        android:paddingTop="@dimen/_5"
        android:text="@string/text__"
        android:textColor="@color/color_text_primary"
        android:textSize="@dimen/small_text_size" />

</RelativeLayout>