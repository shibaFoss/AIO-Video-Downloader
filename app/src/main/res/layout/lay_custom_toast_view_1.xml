<?xml version="1.0" encoding="utf-8"?><!--
    Custom toast layout designed for consistency with app branding and theme.
    Uses CardView for a modern, elevated appearance that visually separates
    the toast from the background.
-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_toast_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10"
    android:layout_marginTop="@dimen/_10"
    android:layout_marginEnd="@dimen/_10"
    android:layout_marginBottom="@dimen/_10"
    android:orientation="horizontal"
    app:cardBackgroundColor="@color/color_background"
    app:cardCornerRadius="@dimen/_10"
    app:cardElevation="@dimen/_5">

    <!--
        Ensures icon and text are horizontally aligned, preserving a clean and
        compact toast design. Background is repeated here to maintain visual
        consistency inside the CardView.
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background"
        android:orientation="horizontal">

        <!--
            Adds branding identity through icon while ensuring it doesn't distract
            screen readers. Rounded icon enhances visual cohesion with the toast
            card’s rounded corners.
        -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_toast_app_icon"
            android:layout_width="@dimen/_30"
            android:layout_height="@dimen/_30"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10"
            android:layout_marginTop="@dimen/_5"
            android:layout_marginEnd="@dimen/_0"
            android:layout_marginBottom="@dimen/_5"
            android:elevation="@dimen/_1"
            android:importantForAccessibility="no"
            android:src="@mipmap/ic_launcher" />

        <!--
            Provides a short, readable message styled to match the app’s typography
            and color palette. Vertically aligned to icon for balance, with enough
            spacing to ensure legibility and avoid visual clutter.
        -->
        <TextView
            android:id="@+id/txt_toast_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10"
            android:layout_marginTop="@dimen/_5"
            android:layout_marginEnd="@dimen/_10"
            android:layout_marginBottom="@dimen/_5"
            android:fontFamily="@font/application_font_family"
            android:gravity="center_vertical"
            android:text="@string/text_100_percentage"
            android:textColor="@color/color_text_primary"
            android:textSize="@dimen/message_text_size" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
