<?xml version="1.0" encoding="utf-8"?><!--
    LAYOUT: File Rename Dialog
    PURPOSE: Provides interface for renaming downloaded files
    FEATURES:
    - Title header with surface background
    - Text input field for new filename
    - Apply changes action button
    - Informational hint text
    STYLE: Inherits from @style/style_dialog
    BEHAVIOR:
    - Shows current filename in editable field
    - Validates new filename before applying
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="UseAppTint,UseCompatTextViewDrawableXml">

    <!--
        PRIMARY CONTAINER: Material CardView
        - 5dp side margins, 10dp top/bottom margins
        - Background color from @color/color_background
        - 10dp corner radius
        - 5dp elevation for shadow effect
    -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_5"
        android:layout_marginTop="@dimen/_10"
        android:layout_marginEnd="@dimen/_5"
        android:layout_marginBottom="@dimen/_10"
        app:cardBackgroundColor="@color/color_background"
        app:cardCornerRadius="@dimen/_10"
        app:cardElevation="@dimen/_5">

        <!-- Main content layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--
                TITLE SECTION
                - Surface color background
                - Centered bold text
                - 10dp margin all sides
            -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_surface"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_dialog_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10"
                    android:ellipsize="end"
                    android:fontFamily="@font/application_font_family"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/title_change_file_name"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--
                FILENAME INPUT CONTAINER
                - 15dp side margins, 10dp top, 5dp bottom
                - Rounded surface background
                - Contains single-line EditText
            -->
            <LinearLayout
                android:id="@+id/edit_field_file_name_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15"
                android:layout_marginTop="@dimen/_10"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_5"
                android:background="@drawable/rounded_surface_color"
                android:orientation="vertical">

                <!--
                    FILENAME INPUT FIELD
                    - 8dp margin all sides
                    - Transparent background
                    - URI input type for filename validation
                    - Hint text when empty
                    - Single line input
                -->
                <EditText
                    android:id="@+id/edit_field_file_name"
                    style="@style/style_dialog.message"
                    android:layout_margin="@dimen/_8"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/text_type_new_file_name_hint"
                    android:importantForAutofill="no"
                    android:inputType="textUri"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/color_on_surface"
                    android:textColorHint="@color/color_text_hint"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="normal"
                    tools:ignore="TextContrastCheck,TouchTargetSizeCheck,VisualLintTextFieldSize" />
            </LinearLayout>

            <!--
                APPLY BUTTON
                - Secondary button selector background
                - 15dp side margins, 5dp vertical
                - 2dp elevation
                - Contains rename icon and action text
            -->
            <RelativeLayout
                android:id="@+id/btn_dialog_positive_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15"
                android:layout_marginTop="@dimen/_5"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_5"
                android:background="@drawable/ic_button_selector_secondary"
                android:clickable="true"
                android:elevation="@dimen/_2"
                tools:ignore="TouchTargetSizeCheck">

                <TextView
                    android:id="@+id/btn_dialog_positive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_7"
                    android:drawableStart="@drawable/ic_button_rename"
                    android:drawablePadding="@dimen/_5"
                    android:drawableTint="@color/color_background"
                    android:ellipsize="end"
                    android:fontFamily="@font/application_font_family"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/title_apply_changes"
                    android:textColor="@color/color_on_secondary"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!--
                INFORMATIONAL HINT
                - Centered hint text
                - Secondary text color
                - Small text size
                - Max 2 lines with ellipsis
            -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_15"
                android:layout_marginTop="@dimen/_2"
                android:layout_marginEnd="@dimen/_15"
                android:layout_marginBottom="@dimen/_8"
                android:ellipsize="end"
                android:fontFamily="@font/application_font_family"
                android:maxLines="2"
                android:text="@string/text_file_name_will_be_renamed"
                android:textColor="@color/color_text_hint"
                android:textSize="@dimen/small_text_size"
                tools:ignore="TextContrastCheck" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>